<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ops_asset_model_list" model="ir.ui.view">
        <field name="name">ops.asset.model.list</field>
        <field name="model">ops.asset.model</field>
        <field name="arch" type="xml">
            <list string="Asset Models" sample="1">
                <field name="name"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>

    <record id="view_ops_asset_model_form" model="ir.ui.view">
        <field name="name">ops.asset.model.form</field>
        <field name="model">ops.asset.model</field>
        <field name="arch" type="xml">
            <form string="Asset Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="product_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ops_asset_model" model="ir.actions.act_window">
        <field name="name">Asset Models</field>
        <field name="res_model">ops.asset.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ops_asset_model" name="Asset Models" parent="ops_matrix_accounting.menu_ops_accounting_root" action="action_ops_asset_model" sequence="30"/>
</odoo>
