<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OPS Asset Tree View -->
    <record id="view_ops_asset_tree" model="ir.ui.view">
        <field name="name">ops.asset.tree</field>
        <field name="model">ops.asset</field>
        <field name="arch" type="xml">
            <list decoration-danger="state == 'cancelled'"
                  decoration-warning="state == 'disposed'"
                  decoration-success="state == 'close'"
                  decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="purchase_date"/>
                <field name="purchase_value" sum="Total Value"/>
                <field name="book_value" sum="Book Value"/>
                <field name="state" widget="badge"
                       decoration-success="state in ('running', 'close')"
                       decoration-warning="state == 'disposed'"
                       decoration-danger="state == 'cancelled'"
                       decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

<record id="view_ops_asset_form" model="ir.ui.view">
        <field name="name">ops.asset.form</field>
        <field name="model">ops.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="model_id"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="asset_type"/>
                            <field name="purchase_date"/>
                            <field name="purchase_value"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Depreciation">
                            <group>
                                <field name="method"/>
                                <field name="method_number"/>
                                <field name="method_period"/>
                            </group>
                            <field name="depreciation_line_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="depreciation_date"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Accounting">
                            <group>
                                <field name="value"/>
                                <field name="salvage_value"/>
                                <field name="value_residual"/>
                            </group>
                            <group>
                                <field name="journal_id"/>
                                <field name="account_asset_id"/>
                                <field name="account_depreciation_id"/>
                                <field name="account_depreciation_expense_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Update action to reference tree view -->
    <record id="action_ops_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">ops.asset</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_ops_asset_tree"/>
    </record>

    <menuitem id="menu_ops_asset" name="Assets" parent="ops_matrix_accounting.menu_ops_accounting_root" action="action_ops_asset" sequence="10"/>

</odoo>
