<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for ops.asset -->
    <record id="view_ops_asset_form" model="ir.ui.view">
        <field name="name">ops.asset.form</field>
        <field name="model">ops.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"
                            class="btn-primary" icon="fa-check"
                            invisible="state != 'draft'"/>
                    <button name="action_resume" type="object" string="Resume"
                            class="btn-success" icon="fa-play"
                            invisible="state != 'paused'"/>
                    <button name="action_pause" type="object" string="Pause"
                            class="btn-warning" icon="fa-pause"
                            invisible="state != 'running'"/>
                    <button name="action_sell" type="object" string="Sell"
                            class="btn-success" icon="fa-money"
                            invisible="state not in ('running', 'paused')"/>
                    <button name="action_dispose" type="object" string="Dispose"
                            class="btn-warning" icon="fa-archive"
                            invisible="state not in ('running', 'paused')"
                            confirm="Are you sure you want to dispose this asset?"/>
                    <button name="action_set_to_draft" type="object" string="Reset to Draft"
                            class="btn-link" icon="fa-undo"
                            invisible="state in ('draft', 'disposed', 'sold')"
                            groups="ops_matrix_core.group_ops_manager"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,paused,running,sold,disposed"/>
                </header>
                <sheet>
                    <div class="alert alert-warning mb-3" role="alert"
                         invisible="state != 'disposed'">
                        <i class="fa fa-archive me-2" title="Disposed"/>
                        <strong>Disposed:</strong> This asset has been disposed on
                        <field name="disposal_date" nolabel="1"/>.
                    </div>
                    <div class="alert alert-info mb-3" role="alert"
                         invisible="not (fully_depreciated and state == 'running')">
                        <i class="fa fa-info-circle me-2" title="Information"/>
                        <strong>Fully Depreciated:</strong> This asset has been fully depreciated.
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_depreciation_lines" type="object" class="oe_stat_button" icon="fa-line-chart">
                            <field name="depreciation_count" widget="statinfo" string="Depreciation Lines"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. MacBook Pro"/></h1>
                        <field name="code" readonly="1"/>
                    </div>
                    <notebook>
                        <page string="General Information" name="general" icon="fa-info-circle">
                            <group>
                                <group>
                                    <field name="category_id"/>
                                    <field name="purchase_date" readonly="[ ('state', '!=', 'draft')]"/>
                                    <field name="purchase_value" readonly="[ ('state', '!=', 'draft')]"/>
                                </group>
                                <group>
                                    <field name="salvage_value" readonly="[ ('state', '!=', 'draft')]"/>
                                    <field name="depreciable_value" readonly="1"/>
                                    <field name="book_value" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Depreciation Lines" name="depreciation" icon="fa-line-chart">
                            <field name="depreciation_ids" readonly="1">
                                <list decoration-muted="state == 'posted'">
                                    <field name="depreciation_date"/>
                                    <field name="amount"/>
                                    <field name="move_id"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'posted'"
                                           decoration-info="state == 'draft'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Analytic Distribution" name="analytic" icon="fa-sitemap">
                            <group>
                                <field name="ops_branch_id"/>
                                <field name="ops_business_unit_id"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes" icon="fa-sticky-note">
                            <field name="notes" placeholder="Additional notes about this asset..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View for ops.asset -->
    <record id="view_ops_asset_list" model="ir.ui.view">
        <field name="name">ops.asset.list</field>
        <field name="model">ops.asset</field>
        <field name="arch" type="xml">
            <list string="Assets"
                  decoration-warning="state == 'disposed'"
                  decoration-success="state == 'sold'"
                  decoration-info="fully_depreciated == True">
                <field name="name"/>
                <field name="category_id"/>
                <field name="purchase_date"/>
                <field name="purchase_value" sum="Total Purchase"/>
                <field name="book_value" sum="Total Book"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'sold'"
                       decoration-warning="state == 'disposed'"
                       decoration-info="state in ('draft', 'running', 'paused')"/>
                <field name="fully_depreciated" column_invisible="1"/>
                <field name="ops_branch_id"/>
                <field name="ops_business_unit_id"/>
            </list>
        </field>
    </record>

    <!-- Search View for ops.asset -->
    <record id="view_ops_asset_search" model="ir.ui.view">
        <field name="name">ops.asset.search</field>
        <field name="model">ops.asset</field>
        <field name="arch" type="xml">
            <search string="Search Assets">
                <filter name="draft" string="Draft" domain="[ ('state', '=', 'draft')]"/>
                <filter name="running" string="Running" domain="[ ('state', '=', 'running')]"/>
                <filter name="paused" string="Paused" domain="[ ('state', '=', 'paused')]"/>
                <filter name="disposed" string="Disposed" domain="[ ('state', '=', 'disposed')]"/>
                <filter name="group_by_category" string="Category" context="{'group_by': 'category_id'}"/>
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                <filter name="group_by_branch" string="Branch" context="{'group_by': 'ops_branch_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action for ops.asset -->
    <record id="action_ops_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">ops.asset</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ops_asset_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new asset.
            </p>
        </field>
    </record>
</odoo>
