<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ops_matrix_snapshot_tree" model="ir.ui.view">
        <field name="name">ops.matrix.snapshot.tree</field>
        <field name="model">ops.matrix.snapshot</field>
        <field name="arch" type="xml">
            <tree string="Financial Snapshots" create="false" edit="false"
                  decoration-muted="transaction_count == 0"
                  decoration-success="net_margin_pct &gt; 15"
                  decoration-warning="net_margin_pct &gt; 5 and net_margin_pct &lt;= 15"
                  decoration-danger="net_margin_pct &lt;= 5">
                <field name="snapshot_date"/>
                <field name="period_type"/>
                <field name="branch_id"/>
                <field name="business_unit_id"/>
                <field name="revenue" sum="Total Revenue"/>
                <field name="cogs" sum="Total COGS"/>
                <field name="gross_profit" sum="Total GP"/>
                <field name="operating_expense" sum="Total OpEx"/>
                <field name="net_income" sum="Total NI"/>
                <field name="gross_margin_pct" avg="Avg GM%" widget="percentage"/>
                <field name="net_margin_pct" avg="Avg NM%" widget="percentage"/>
                <field name="transaction_count" sum="Total Txn"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ops_matrix_snapshot_form" model="ir.ui.view">
        <field name="name">ops.matrix.snapshot.form</field>
        <field name="model">ops.matrix.snapshot</field>
        <field name="arch" type="xml">
            <form string="Financial Snapshot" create="false" edit="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_ops_matrix_snapshot)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-line-chart"
                                context="{'search_default_branch_id': branch_id, 'search_default_business_unit_id': business_unit_id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">All Periods</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="snapshot_date"/>
                        </h1>
                        <h2>
                            <field name="branch_id"/> - <field name="business_unit_id"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Period Information">
                            <field name="period_type"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="company_id"/>
                        </group>
                        <group string="Activity Metrics">
                            <field name="transaction_count"/>
                            <field name="invoice_count"/>
                            <field name="payment_count"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Income Statement" name="income_statement">
                            <group>
                                <group string="Revenue &amp; COGS">
                                    <field name="revenue" widget="monetary"/>
                                    <field name="cogs" widget="monetary"/>
                                    <field name="gross_profit" widget="monetary" class="font-weight-bold"/>
                                    <field name="gross_margin_pct" widget="percentage"/>
                                </group>
                                <group string="Operating Results">
                                    <field name="operating_expense" widget="monetary"/>
                                    <field name="ebitda" widget="monetary"/>
                                    <field name="depreciation" widget="monetary"/>
                                    <field name="ebit" widget="monetary" class="font-weight-bold"/>
                                    <field name="operating_margin_pct" widget="percentage"/>
                                </group>
                            </group>
                            <group>
                                <group string="Net Income">
                                    <field name="interest_expense" widget="monetary"/>
                                    <field name="tax_expense" widget="monetary"/>
                                    <field name="net_income" widget="monetary" class="font-weight-bold text-success"/>
                                    <field name="net_margin_pct" widget="percentage"/>
                                </group>
                            </group>
                        </page>

                        <page string="Balance Sheet" name="balance_sheet">
                            <group>
                                <group string="Assets">
                                    <field name="total_assets" widget="monetary"/>
                                </group>
                                <group string="Liabilities &amp; Equity">
                                    <field name="total_liabilities" widget="monetary"/>
                                    <field name="total_equity" widget="monetary" class="font-weight-bold"/>
                                </group>
                            </group>
                        </page>

                        <page string="Metadata" name="metadata">
                            <group>
                                <field name="create_date"/>
                                <field name="write_date"/>
                                <field name="currency_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ops_matrix_snapshot_search" model="ir.ui.view">
        <field name="name">ops.matrix.snapshot.search</field>
        <field name="model">ops.matrix.snapshot</field>
        <field name="arch" type="xml">
            <search>
                <field name="branch_id"/>
                <field name="business_unit_id"/>
                <field name="snapshot_date"/>
                <field name="company_id"/>

                <filter name="monthly" string="Monthly"
                        domain="[('period_type', '=', 'monthly')]"/>
                <filter name="quarterly" string="Quarterly"
                        domain="[('period_type', '=', 'quarterly')]"/>
                <filter name="yearly" string="Yearly"
                        domain="[('period_type', '=', 'yearly')]"/>

                <separator/>

                <filter name="this_month" string="This Month"
                        domain="[('snapshot_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_quarter" string="This Quarter"
                        domain="[('snapshot_date', '&gt;=', (context_today().replace(month=((context_today().month-1)//3)*3+1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_year" string="This Year"
                        domain="[('snapshot_date', '&gt;=', context_today().replace(month=1, day=1).strftime('%Y-%m-%d'))]"/>
                <filter name="last_year" string="Last Year"
                        domain="[('snapshot_date', '&gt;=', (context_today().replace(month=1, day=1) - relativedelta(years=1)).strftime('%Y-%m-%d')),
                                ('snapshot_date', '&lt;=', (context_today().replace(month=12, day=31) - relativedelta(years=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <filter name="profitable" string="Profitable"
                        domain="[('net_income', '&gt;', 0)]"/>
                <filter name="unprofitable" string="Unprofitable"
                        domain="[('net_income', '&lt;=', 0)]"/>
                <filter name="high_margin" string="High Margin (&gt;15%)"
                        domain="[('net_margin_pct', '&gt;', 15)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_branch" string="Branch"
                            context="{'group_by': 'branch_id'}"/>
                    <filter name="group_bu" string="Business Unit"
                            context="{'group_by': 'business_unit_id'}"/>
                    <filter name="group_period" string="Period Type"
                            context="{'group_by': 'period_type'}"/>
                    <filter name="group_month" string="Month"
                            context="{'group_by': 'snapshot_date:month'}"/>
                    <filter name="group_quarter" string="Quarter"
                            context="{'group_by': 'snapshot_date:quarter'}"/>
                    <filter name="group_year" string="Year"
                            context="{'group_by': 'snapshot_date:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View for Analysis -->
    <record id="view_ops_matrix_snapshot_pivot" model="ir.ui.view">
        <field name="name">ops.matrix.snapshot.pivot</field>
        <field name="model">ops.matrix.snapshot</field>
        <field name="arch" type="xml">
            <pivot string="Financial Analysis">
                <field name="snapshot_date" type="row" interval="month"/>
                <field name="branch_id" type="row"/>
                <field name="business_unit_id" type="col"/>
                <field name="revenue" type="measure"/>
                <field name="net_income" type="measure"/>
                <field name="net_margin_pct" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View for Trends -->
    <record id="view_ops_matrix_snapshot_graph" model="ir.ui.view">
        <field name="name">ops.matrix.snapshot.graph</field>
        <field name="model">ops.matrix.snapshot</field>
        <field name="arch" type="xml">
            <graph string="Financial Trends" type="line">
                <field name="snapshot_date" interval="month"/>
                <field name="revenue" type="measure"/>
                <field name="net_income" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ops_matrix_snapshot" model="ir.actions.act_window">
        <field name="name">Financial Snapshots</field>
        <field name="res_model">ops.matrix.snapshot</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="context">{'search_default_monthly': 1, 'search_default_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No financial snapshots yet
            </p>
            <p>
                Financial snapshots are pre-computed aggregations that make reports load instantly
                (100-600x faster than real-time calculations).
            </p>
            <p>
                Snapshots are rebuilt automatically every night at 2 AM for the last 3 months.
                You can also trigger a manual rebuild using the action button.
            </p>
        </field>
    </record>

    <!-- Manual Rebuild Action -->
    <record id="action_rebuild_snapshots" model="ir.actions.server">
        <field name="name">Rebuild Snapshots (Last 3 Months)</field>
        <field name="model_id" ref="model_ops_matrix_snapshot"/>
        <field name="binding_model_id" ref="model_ops_matrix_snapshot"/>
        <field name="state">code</field>
        <field name="code">
from datetime import date, timedelta

date_to = date.today()
date_from = (date_to.replace(day=1) - timedelta(days=90)).replace(day=1)

count = model.rebuild_snapshots(
    period_type='monthly',
    date_from=date_from,
    date_to=date_to
)

action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Snapshots Rebuilt',
        'message': f'Successfully rebuilt {count} financial snapshots for the last 3 months',
        'type': 'success',
        'sticky': False,
    }
}
        </field>
    </record>

    <!-- Rebuild All Action (Admin Only) -->
    <record id="action_rebuild_all_snapshots" model="ir.actions.server">
        <field name="name">Rebuild Snapshots (Last Year)</field>
        <field name="model_id" ref="model_ops_matrix_snapshot"/>
        <field name="binding_model_id" ref="model_ops_matrix_snapshot"/>
        <field name="state">code</field>
        <field name="code">
from datetime import date
from dateutil.relativedelta import relativedelta

date_to = date.today()
date_from = date_to - relativedelta(years=1)

count = model.rebuild_snapshots(
    period_type='monthly',
    date_from=date_from,
    date_to=date_to
)

action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Snapshots Rebuilt',
        'message': f'Successfully rebuilt {count} financial snapshots for the last year',
        'type': 'success',
        'sticky': False,
    }
}
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ops_matrix_snapshot"
              name="Financial Snapshots"
              parent="ops_matrix_accounting.menu_ops_accounting_root"
              action="action_ops_matrix_snapshot"
              sequence="90"
              groups="ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_administrator"/>
</odoo>
