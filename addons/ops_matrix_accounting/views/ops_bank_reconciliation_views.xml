<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bank Reconciliation Form View -->
    <record id="view_ops_bank_reconciliation_form" model="ir.ui.view">
        <field name="name">ops.bank.reconciliation.form</field>
        <field name="model">ops.bank.reconciliation</field>
        <field name="arch" type="xml">
            <form string="Bank Reconciliation">
                <header>
                    <button name="action_import_statement" string="Import Statement" type="object"
                            class="btn-secondary" invisible="state not in ('draft', 'processing')"/>
                    <button name="action_auto_match" string="Auto Match" type="object"
                            class="btn-primary" invisible="state not in ('draft', 'processing')"/>
                    <button name="action_validate" string="Validate" type="object"
                            class="btn-success" invisible="state != 'processing'"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object"
                            invisible="state not in ('processing', 'cancelled')"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('reconciled', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,reconciled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="group_1">
                        <group name="group_2">
                            <field name="company_id" invisible="1"/>
                            <field name="journal_id"/>
                            <field name="ops_branch_id"/>
                            <field name="date"/>
                        </group>
                        <group name="group_3">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group name="group_4">
                        <group name="balances" string="Balances">
                            <field name="balance_start"/>
                            <field name="balance_end_statement"/>
                        </group>
                        <group name="computed" string="Computed">
                            <field name="balance_end_computed"/>
                            <field name="balance_difference"
                                   decoration-danger="balance_difference != 0"
                                   decoration-success="balance_difference == 0"/>
                        </group>
                    </group>
                    <group name="group_7">
                        <group name="statistics" string="Statistics">
                            <field name="total_lines"/>
                            <field name="matched_lines"/>
                            <field name="unmatched_lines" decoration-warning="unmatched_lines > 0"/>
                            <field name="match_percentage" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Statement Lines" name="lines">
                            <field name="line_ids">
                                <list string="Statement Lines" editable="bottom"
                                      decoration-success="match_status == 'matched'"
                                      decoration-warning="match_status == 'unmatched'">
                                    <field name="date"/>
                                    <field name="ref"/>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="amount"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="match_status" widget="badge"
                                           decoration-success="match_status == 'matched'"
                                           decoration-warning="match_status == 'unmatched'"
                                           decoration-info="match_status == 'manual'"/>
                                    <field name="matched_move_id"/>
                                    <field name="difference_amount" optional="hide"/>
                                    <button name="action_unmatch" type="object" string="Unmatch"
                                            icon="fa-unlink" invisible="match_status != 'matched'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Bank Reconciliation Tree View -->
    <record id="view_ops_bank_reconciliation_tree" model="ir.ui.view">
        <field name="name">ops.bank.reconciliation.tree</field>
        <field name="model">ops.bank.reconciliation</field>
        <field name="arch" type="xml">
            <list string="Bank Reconciliations" decoration-info="state == 'draft'"
                  decoration-warning="state == 'processing'" decoration-success="state == 'reconciled'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="ops_branch_id" optional="show"/>
                <field name="balance_start"/>
                <field name="balance_end_statement"/>
                <field name="balance_difference" decoration-danger="balance_difference != 0"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="total_lines"/>
                <field name="match_percentage" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'processing'"
                       decoration-success="state == 'reconciled'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Bank Reconciliation Search View -->
    <record id="view_ops_bank_reconciliation_search" model="ir.ui.view">
        <field name="name">ops.bank.reconciliation.search</field>
        <field name="model">ops.bank.reconciliation</field>
        <field name="arch" type="xml">
            <search string="Search Reconciliations">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="ops_branch_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Processing" name="processing" domain="[('state', '=', 'processing')]"/>
                <filter string="Reconciled" name="reconciled" domain="[('state', '=', 'reconciled')]"/>
                <filter string="This Month" name="this_month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                <filter string="Journal" name="group_journal" context="{'group_by': 'journal_id'}"/>
                <filter string="Branch" name="group_branch" context="{'group_by': 'ops_branch_id'}"/>
                <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
            </search>
        </field>
    </record>

    <!-- Bank Statement Import Wizard -->
    <record id="view_ops_bank_statement_import_wizard_form" model="ir.ui.view">
        <field name="name">ops.bank.statement.import.wizard.form</field>
        <field name="model">ops.bank.statement.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Bank Statement">
                <group name="group_9">
                    <field name="reconciliation_id" invisible="1"/>
                    <field name="file_data" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                    <field name="file_format"/>
                </group>
                <group string="CSV Options" name="csv_options" invisible="file_format != 'csv'">
                    <group name="group_10">
                        <field name="date_format" placeholder="%Y-%m-%d"/>
                        <field name="delimiter"/>
                        <field name="skip_header"/>
                    </group>
                    <group name="group_11">
                        <field name="col_date"/>
                        <field name="col_ref"/>
                        <field name="col_desc"/>
                        <field name="col_amount"/>
                    </group>
                </group>
                <group string="Separate Debit/Credit Columns" name="csv_debit_credit" invisible="file_format != 'csv'">
                    <field name="col_debit"/>
                    <field name="col_credit"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bank Reconciliation Action -->
    <record id="action_ops_bank_reconciliation" model="ir.actions.act_window">
        <field name="name">Bank Reconciliations</field>
        <field name="res_model">ops.bank.reconciliation</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ops_bank_reconciliation_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first bank reconciliation
            </p>
            <p>
                Import bank statements, auto-match transactions, and reconcile your bank accounts.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ops_bank_reconciliation"
              name="Bank Reconciliation"
              parent="account.menu_finance"
              action="action_ops_bank_reconciliation"
              sequence="30"
                  groups="ops_matrix_core.group_ops_treasury,ops_matrix_core.group_ops_finance_manager,ops_matrix_core.group_ops_cfo"/>
</odoo>
