<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- PDC Receivable Views -->
    <record id="view_ops_pdc_receivable_tree" model="ir.ui.view">
        <field name="name">ops.pdc.receivable.tree</field>
        <field name="model">ops.pdc.receivable</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='draft'" decoration-success="state=='cleared'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="check_number"/>
                <field name="maturity_date"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_ops_pdc_receivable_form" model="ir.ui.view">
        <field name="name">ops.pdc.receivable.form</field>
        <field name="model">ops.pdc.receivable</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_deposit" string="Deposit" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_clear" string="Clear" type="object" 
                            invisible="state != 'deposited'" class="oe_highlight"/>
                    <button name="action_bounce" string="Bounce" type="object" 
                            invisible="state != 'deposited'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state not in ['draft', 'deposited']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="check_number"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="check_date"/>
                            <field name="maturity_date"/>
                        </group>
                        <group>
                            <field name="deposit_date" readonly="1"/>
                            <field name="clearance_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="bank_id"/>
                        <field name="notes"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- PDC Payable Views -->
    <record id="view_ops_pdc_payable_tree" model="ir.ui.view">
        <field name="name">ops.pdc.payable.tree</field>
        <field name="model">ops.pdc.payable</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='draft'" decoration-success="state=='cleared'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="check_number"/>
                <field name="maturity_date"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_ops_pdc_payable_form" model="ir.ui.view">
        <field name="name">ops.pdc.payable.form</field>
        <field name="model">ops.pdc.payable</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_issue" string="Issue" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_present" string="Present" type="object" 
                            invisible="state != 'issued'" class="oe_highlight"/>
                    <button name="action_clear" string="Clear" type="object" 
                            invisible="state != 'presented'" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state not in ['draft', 'issued']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="check_number"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="check_date"/>
                            <field name="maturity_date"/>
                        </group>
                        <group>
                            <field name="issue_date" readonly="1"/>
                            <field name="clearance_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="bank_id"/>
                        <field name="notes"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_ops_pdc_receivable" model="ir.actions.act_window">
        <field name="name">PDC Receivable</field>
        <field name="res_model">ops.pdc.receivable</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="action_ops_pdc_payable" model="ir.actions.act_window">
        <field name="name">PDC Payable</field>
        <field name="res_model">ops.pdc.payable</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>
