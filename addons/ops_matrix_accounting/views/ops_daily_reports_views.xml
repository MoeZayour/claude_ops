<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    ===================================================
    OPS Matrix Daily Reports - Phase 3 Corporate UI
    Cash Book, Day Book, Bank Book
    ===================================================
    -->

    <!-- ==================== CASH BOOK WIZARD ==================== -->

    <record id="view_ops_cash_book_wizard_form" model="ir.ui.view">
        <field name="name">ops.cash.book.wizard.form</field>
        <field name="model">ops.cash.book.wizard</field>
        <field name="arch" type="xml">
            <form string="Cash Book Report">

                <!-- ==================== REPORT SELECTION ==================== -->
                <group name="report_type_section" string="ðŸ“Š Cash Book" class="ops_wizard_section">
                    <div class="text-muted">
                        <p>Daily cash receipts and payments report with opening and closing balances.</p>
                    </div>
                </group>

                <!-- ==================== REPORTING PERIOD ==================== -->
                <group name="period_section" string="ðŸ“… Reporting Period" class="ops_wizard_section">
                    <group>
                        <field name="date_from"
                               help="Start date of cash book period"/>
                        <field name="date_to"
                               help="End date of cash book period"/>
                    </group>
                    <group>
                        <field name="company_id"
                               options="{'no_create': True}"
                               groups="base.group_multi_company"
                               help="Company to report on"/>
                        <field name="target_move"
                               widget="radio"
                               help="Include all entries or posted entries only"/>
                    </group>
                </group>

                <!-- ==================== SCOPE & FILTERS ==================== -->
                <group name="scope_section" string="ðŸŽ¯ Scope &amp; Filters" class="ops_wizard_section">
                    <group>
                        <field name="journal_ids"
                               widget="many2many_tags"
                               options="{'no_create': True}"
                               placeholder="All Cash Journals"
                               help="Filter by specific cash journals (leave empty for all)"/>
                        <field name="ops_branch_ids"
                               widget="many2many_tags"
                               options="{'no_create': True, 'color_field': 'color'}"
                               placeholder="All Branches"
                               help="Filter by specific branches (leave empty for all authorized branches)"/>
                    </group>
                    <group>
                        <field name="sort_by"
                               widget="radio"
                               help="Sort order for transactions"/>
                        <field name="display_account"
                               widget="radio"
                               help="Filter accounts by activity"/>
                    </group>
                </group>

                <!-- ==================== ACTION BUTTONS ==================== -->
                <footer>
                    <button name="action_view_report"
                            string="View Report"
                            type="object"
                            class="btn-primary"
                            icon="fa-eye"
                            help="Open report in browser for preview"/>
                    <button name="action_print_pdf"
                            string="Print PDF"
                            type="object"
                            class="btn-secondary"
                            icon="fa-print"
                            help="Generate PDF for printing or download"/>
                    <button name="action_export_excel"
                            string="Export Excel"
                            type="object"
                            class="btn-success"
                            icon="fa-file-excel-o"
                            help="Export data to Excel spreadsheet"/>
                    <button string="Cancel"
                            class="btn-default"
                            icon="fa-times"
                            special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

