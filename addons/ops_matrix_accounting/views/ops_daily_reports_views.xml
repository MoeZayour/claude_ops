<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <!--
 ===================================================
 OPS Matrix Daily Reports - Phase 4 v2 Contract UI
 Cash Book, Day Book, Bank Book
 ===================================================
 -->

 <!-- ==================== CASH BOOK WIZARD ==================== -->

 <record id="view_ops_cash_book_wizard_form" model="ir.ui.view">
 <field name="name">ops.cash.book.wizard.form</field>
 <field name="model">ops.cash.book.wizard</field>
 <field name="arch" type="xml">
 <form string="Cash Book Report">

 <!-- ==================== REPORT SELECTION ==================== -->
 <group name="report_type_section" string="Cash Book">
 <div class="text-muted">
 <p>Daily cash receipts and payments report with opening and closing balances.</p>
 </div>
 </group>

 <!-- ==================== REPORTING PERIOD ==================== -->
 <group name="period_section" string="Reporting Period">
 <group name="group_1">
 <field name="date_from"
 help="Start date of cash book period"/>
 <field name="date_to"
 help="End date of cash book period"/>
 </group>
 <group name="group_2">
 <field name="company_id"
 options="{&apos;no_create&apos;: True}"
 groups="base.group_multi_company"
 help="Company to report on"/>
 <field name="target_move"
 widget="radio"
 help="Include all entries or posted entries only"/>
 </group>
 </group>

 <!-- ==================== SCOPE &amp; FILTERS ==================== -->
 <group name="scope_section" string="Scope &amp; Filters">
 <group name="group_3">
 <field name="journal_ids"
 widget="many2many_tags"
 options="{&apos;no_create&apos;: True}"
 placeholder="All Cash Journals"
 help="Filter by specific cash journals (leave empty for all)"/>
 <field name="branch_ids"
 widget="many2many_tags"
 options="{&apos;no_create&apos;: True, &apos;color_field&apos;: &apos;color&apos;}"
 placeholder="All Branches"
 help="Filter by specific branches (leave empty for all authorized branches)"/>
 </group>
 <group name="group_4">
 <field name="sort_by"
 widget="radio"
 help="Sort order for transactions"/>
 <field name="display_account"
 widget="radio"
 help="Filter accounts by activity"/>
 </group>
 </group>

 <!-- ==================== OUTPUT FORMAT ==================== -->
 <group name="output_section" string="Output Format">
 <field name="output_format" widget="radio"/>
 </group>

 <!-- ==================== ACTION BUTTONS ==================== -->
 <footer>
 <button name="action_generate_report"
 string="Generate Report"
 type="object"
 class="btn-primary"
 icon="fa-print"
 help="Generate report in selected output format"/>
 <button string="Cancel"
 class="btn-default"
 icon="fa-times"
 special="cancel"/>
 </footer>

 </form>
 </field>
 </record>

