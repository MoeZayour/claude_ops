<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================
         List View for ops.asset.depreciation
         Task 2.4: Enhanced with sequence and remaining value
         ============================================ -->
    <record id="view_ops_asset_depreciation_list" model="ir.ui.view">
        <field name="name">ops.asset.depreciation.list</field>
        <field name="model">ops.asset.depreciation</field>
        <field name="arch" type="xml">
            <list string="Depreciation Lines" create="false" default_order="asset_id, sequence">
                <field name="sequence" optional="hide"/>
                <field name="depreciation_date"/>
                <field name="asset_id"/>
                <field name="category_id" optional="hide"/>
                <field name="amount" sum="Total"/>
                <field name="remaining_value" optional="show"/>
                <field name="cumulative_depreciation" optional="hide"/>
                <field name="move_id" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'posted'"
                       decoration-danger="state == 'failed'"
                       decoration-info="state == 'draft'"/>
                <field name="auto_posted" optional="hide" widget="boolean"/>
                <field name="auto_post_error" optional="hide"/>
                <field name="branch_id" optional="hide"/>
                <field name="business_unit_id" optional="hide"/>
                <button name="action_post" type="object" string="Post" icon="fa-arrow-right"
                        help="Post this depreciation line" invisible="state != 'draft'"/>
            </list>
        </field>
    </record>

    <!-- ============================================
         Form View for ops.asset.depreciation
         ============================================ -->
    <record id="view_ops_asset_depreciation_form" model="ir.ui.view">
        <field name="name">ops.asset.depreciation.form</field>
        <field name="model">ops.asset.depreciation</field>
        <field name="arch" type="xml">
            <form string="Depreciation Line" create="false">
                <header>
                    <button name="action_post" type="object" string="Post Entry" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_view_move" type="object" string="View Journal Entry"
                            invisible="not move_id"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <!-- Alert banner for auto-post errors -->
                    <div class="alert alert-warning" role="alert" invisible="not auto_post_error">
                        <strong><i class="fa fa-exclamation-triangle"/> Auto-Post Error:</strong>
                        <field name="auto_post_error" nolabel="1"/>
                    </div>

                    <group name="group_1">
                        <group name="depreciation_details" string="Depreciation Details">
                            <field name="asset_id" readonly="1"/>
                            <field name="category_id" readonly="1"/>
                            <field name="sequence" readonly="1"/>
                            <field name="depreciation_date" readonly="1"/>
                        </group>
                        <group name="amounts" string="Amounts">
                            <field name="amount" readonly="1"/>
                            <field name="remaining_value" readonly="1"/>
                            <field name="cumulative_depreciation" readonly="1"/>
                        </group>
                    </group>

                    <group name="group_4">
                        <group name="journal_entry" string="Journal Entry">
                            <field name="move_id" readonly="1"/>
                        </group>
                        <group name="ops_matrix" string="OPS Matrix">
                            <field name="branch_id" readonly="1"/>
                            <field name="business_unit_id" readonly="1"/>
                        </group>
                    </group>

                    <!-- Auto-Post Information (shown when auto-posted or has error) -->
                    <group name="autopost_information" string="Auto-Post Information"
                           invisible="not auto_posted and not auto_post_error">
                        <group name="group_8">
                            <field name="auto_posted" readonly="1"/>
                            <field name="auto_post_date" readonly="1" invisible="not auto_posted"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================
         Search View for ops.asset.depreciation
         ============================================ -->
    <record id="view_ops_asset_depreciation_search" model="ir.ui.view">
        <field name="name">ops.asset.depreciation.search</field>
        <field name="model">ops.asset.depreciation</field>
        <field name="arch" type="xml">
            <search string="Search Depreciation Lines">
                <field name="asset_id"/>
                <field name="depreciation_date"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="posted" string="Posted" domain="[('state', '=', 'posted')]"/>
                <filter name="failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter name="auto_posted" string="Auto-Posted" domain="[('auto_posted', '=', True)]"/>
                <filter name="auto_post_errors" string="Auto-Post Errors" domain="[('auto_post_error', '!=', False)]"/>
                <separator/>
                <filter name="this_month" string="This Month"
                        domain="[('depreciation_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('depreciation_date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_year" string="This Year"
                        domain="[('depreciation_date', '&gt;=', (context_today() - relativedelta(month=1, day=1)).strftime('%Y-%m-%d')),
                                 ('depreciation_date', '&lt;', (context_today() + relativedelta(years=1, month=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group name="group_9">
                    <filter name="group_by_asset" string="Asset" context="{'group_by': 'asset_id'}"/>
                    <filter name="group_by_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'depreciation_date:month'}"/>
                    <filter name="group_by_branch" string="Branch" context="{'group_by': 'branch_id'}"/>
                    <filter name="group_by_bu" string="Business Unit" context="{'group_by': 'business_unit_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================
         Action for ops.asset.depreciation
         ============================================ -->
    <record id="action_ops_asset_depreciation" model="ir.actions.act_window">
        <field name="name">Depreciation Lines</field>
        <field name="res_model">ops.asset.depreciation</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ops_asset_depreciation_search"/>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No depreciation lines found
            </p>
            <p>
                Depreciation lines are generated automatically when you confirm an asset.
                Each line represents a periodic depreciation entry.
            </p>
        </field>
    </record>

    <!--
        Note: The basic cron job has been replaced by the enhanced
        auto-depreciation cron in data/cron_depreciation.xml
        which includes:
        - Period lock checking
        - Category auto_post_depreciation setting
        - Error tracking and notifications
        - Monthly reminders
    -->
</odoo>
