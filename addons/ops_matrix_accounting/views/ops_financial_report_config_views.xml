<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Financial Report Config Form -->
    <record id="view_ops_financial_report_config_form" model="ir.ui.view">
        <field name="name">ops.financial.report.config.form</field>
        <field name="model">ops.financial.report.config</field>
        <field name="arch" type="xml">
            <form string="Report Line Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Line Name"/>
                        </h1>
                    </div>
                    <group name="group_1">
                        <group name="general" string="General">
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="report_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                        <group name="line_configuration" string="Line Configuration">
                            <field name="type"/>
                            <field name="sign"/>
                            <field name="style"/>
                            <field name="display_detail"/>
                            <field name="level" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="accounts" string="Accounts" invisible="type != 'accounts'">
                            <group name="group_4">
                                <field name="account_ids" widget="many2many_tags"
                                       options="{'no_create': True}"/>
                            </group>
                        </page>
                        <page name="account_type" string="Account Type" invisible="type != 'account_type'">
                            <group name="group_5">
                                <field name="account_type_selection"/>
                            </group>
                            <group name="info" string="Info">
                                <p class="text-muted">
                                    Select an account type to include all accounts of that type in this report line.
                                    The balance will be calculated from all account.move.line records for accounts
                                    matching the selected type.
                                </p>
                            </group>
                        </page>
                        <page name="source_line" string="Source Line" invisible="type != 'report_value'">
                            <group name="group_7">
                                <field name="report_line_id"/>
                            </group>
                            <group name="info_1" string="Info">
                                <p class="text-muted">
                                    This line will display the same value as the selected source line.
                                    Useful for totals and subtotals that reference other calculated lines.
                                </p>
                            </group>
                        </page>
                        <page name="children" string="Children" invisible="type != 'sum'">
                            <field name="children_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="sign"/>
                                    <field name="style"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View with Hierarchy -->
    <record id="view_ops_financial_report_config_tree" model="ir.ui.view">
        <field name="name">ops.financial.report.config.tree</field>
        <field name="model">ops.financial.report.config</field>
        <field name="arch" type="xml">
            <list string="Report Structure" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="type"/>
                <field name="account_type_selection" optional="show"/>
                <field name="sign"/>
                <field name="style"/>
                <field name="report_type" optional="hide"/>
                <field name="level"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ops_financial_report_config_search" model="ir.ui.view">
        <field name="name">ops.financial.report.config.search</field>
        <field name="model">ops.financial.report.config</field>
        <field name="arch" type="xml">
            <search string="Report Configuration">
                <field name="name"/>
                <field name="parent_id"/>
                <filter string="Balance Sheet" name="balance_sheet"
                        domain="[('report_type', '=', 'balance_sheet')]"/>
                <filter string="Profit &amp; Loss" name="profit_loss"
                        domain="[('report_type', '=', 'profit_loss')]"/>
                <filter string="Cash Flow" name="cash_flow"
                        domain="[('report_type', '=', 'cash_flow')]"/>
                <filter string="Custom" name="custom"
                        domain="[('report_type', '=', 'custom')]"/>
                <separator/>
                <filter string="Root Lines Only" name="root_only"
                        domain="[('parent_id', '=', False)]"/>
                <separator/>
                <filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Report Type" name="group_report_type"
                        context="{'group_by': 'report_type'}" domain="[]"/>
                <filter string="Line Type" name="group_type"
                        context="{'group_by': 'type'}" domain="[]"/>
                <filter string="Parent" name="group_parent"
                        context="{'group_by': 'parent_id'}" domain="[]"/>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_ops_financial_report_config" model="ir.actions.act_window">
        <field name="name">Financial Report Structure</field>
        <field name="res_model">ops.financial.report.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_root_only': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first financial report structure
            </p>
            <p>
                Configure hierarchical report lines for Balance Sheet, Profit &amp; Loss,
                and other financial reports. Each line can aggregate accounts by type,
                specific account selection, or sum of child lines.
            </p>
        </field>
    </record>

    <record id="action_ops_financial_report_config_bs" model="ir.actions.act_window">
        <field name="name">Balance Sheet Structure</field>
        <field name="res_model">ops.financial.report.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('report_type', '=', 'balance_sheet')]</field>
        <field name="context">{'default_report_type': 'balance_sheet', 'search_default_root_only': 1}</field>
    </record>

    <record id="action_ops_financial_report_config_pl" model="ir.actions.act_window">
        <field name="name">Profit &amp; Loss Structure</field>
        <field name="res_model">ops.financial.report.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('report_type', '=', 'profit_loss')]</field>
        <field name="context">{'default_report_type': 'profit_loss', 'search_default_root_only': 1}</field>
    </record>

    <!-- Server Actions for Default Generation -->
    <record id="action_generate_default_bs" model="ir.actions.server">
        <field name="name">Generate Default Balance Sheet</field>
        <field name="model_id" ref="model_ops_financial_report_config"/>
        <field name="binding_model_id" ref="model_ops_financial_report_config"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">model.generate_default_balance_sheet()</field>
    </record>

    <record id="action_generate_default_pl" model="ir.actions.server">
        <field name="name">Generate Default P&amp;L</field>
        <field name="model_id" ref="model_ops_financial_report_config"/>
        <field name="binding_model_id" ref="model_ops_financial_report_config"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">model.generate_default_profit_loss()</field>
    </record>
</odoo>
