<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        ================================================================
        OPS CORPORATE DAILY REPORTS
        Phase 4: Corporate Report Template Redesign
        ================================================================

        REPORTS:
        1. Cash Book - Daily cash receipts and payments
        2. Day Book - All journal entries for a specific date
        3. Bank Book - Bank account transactions with running balance

        SHARED COMPONENTS USED:
        - report_corporate_header
        - report_corporate_title
        - report_filter_bar
        - report_corporate_footer
    -->

    <!-- ==================== CASH BOOK REPORT ==================== -->

    <template id="report_cash_book_corporate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="doc.company_id or env.company"/>

                <div class="page" style="font-family: Arial, Helvetica, sans-serif; color: #1e293b;">

                    <!-- Corporate Header -->
                    <t t-call="ops_matrix_accounting.report_corporate_header"/>

                    <!-- Report Title -->
                    <t t-call="ops_matrix_accounting.report_corporate_title">
                        <t t-set="report_title" t-value="'Cash Book'"/>
                        <t t-set="report_pillar" t-value="'Daily Books'"/>
                        <t t-set="date_from" t-value="doc.date_from"/>
                        <t t-set="date_to" t-value="doc.date_to"/>
                    </t>

                    <!-- Filter Info Bar -->
                    <t t-call="ops_matrix_accounting.report_filter_bar">
                        <t t-set="doc" t-value="doc"/>
                    </t>

                    <!-- Opening Balance -->
                    <div style="background-color: #fef3c7; border: 1px solid #f59e0b; border-radius: 4px; padding: 10px 15px; margin-bottom: 15px;">
                        <table width="100%" style="border-collapse: collapse;">
                            <tr>
                                <td style="vertical-align: middle;">
                                    <span style="font-size: 10px; font-weight: 600; color: #92400e;">Opening Balance</span>
                                </td>
                                <td style="text-align: right; vertical-align: middle;">
                                    <span style="font-size: 11px; font-weight: 700; font-family: Consolas, Monaco, monospace; color: #92400e;">
                                        <t t-esc="'{:,.2f}'.format(doc.report_data.get('opening_balance', 0))"/>
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Transaction Table -->
                    <table width="100%" style="border-collapse: collapse; margin-bottom: 15px; font-size: 9px;">
                        <thead>
                            <tr style="border-bottom: 2px solid #1e293b; background-color: #f8fafc;">
                                <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Date</th>
                                <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Reference</th>
                                <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Partner</th>
                                <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Description</th>
                                <th style="text-align: right; padding: 6px 8px; font-weight: 600; color: #475569;">Debit</th>
                                <th style="text-align: right; padding: 6px 8px; font-weight: 600; color: #475569;">Credit</th>
                                <th style="text-align: right; padding: 6px 8px; font-weight: 600; color: #475569;">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.report_data.get('lines', [])" t-as="line">
                                <tr style="border-bottom: 1px solid #f1f5f9;">
                                    <td style="padding: 6px 8px; color: #475569;">
                                        <t t-esc="line.get('date', '')"/>
                                    </td>
                                    <td style="padding: 6px 8px; color: #475569;">
                                        <t t-esc="line.get('ref', '') or '-'"/>
                                    </td>
                                    <td style="padding: 6px 8px; color: #475569;">
                                        <t t-esc="line.get('partner', '') or '-'"/>
                                    </td>
                                    <td style="padding: 6px 8px; color: #475569;">
                                        <t t-esc="line.get('label', '')"/>
                                    </td>
                                    <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                        <t t-if="line.get('debit', 0) > 0">
                                            <t t-esc="'{:,.2f}'.format(line['debit'])"/>
                                        </t>
                                        <t t-else="">
                                            <span style="color: #94a3b8;">-</span>
                                        </t>
                                    </td>
                                    <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                        <t t-if="line.get('credit', 0) > 0">
                                            <t t-esc="'{:,.2f}'.format(line['credit'])"/>
                                        </t>
                                        <t t-else="">
                                            <span style="color: #94a3b8;">-</span>
                                        </t>
                                    </td>
                                    <td style="text-align: right; padding: 6px 8px; font-weight: 500; font-family: Consolas, Monaco, monospace;">
                                        <t t-esc="'{:,.2f}'.format(line.get('balance', 0))"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr style="border-top: 2px solid #1e293b; border-bottom: 3px double #1e293b; background-color: #f1f5f9;">
                                <td colspan="4" style="padding: 10px 8px; font-weight: 700; text-transform: uppercase; font-size: 10px;">TOTALS</td>
                                <td style="text-align: right; padding: 10px 8px; font-weight: 700; font-family: Consolas, Monaco, monospace; font-size: 10px;">
                                    <t t-esc="'{:,.2f}'.format(doc.report_data.get('total_debit', 0))"/>
                                </td>
                                <td style="text-align: right; padding: 10px 8px; font-weight: 700; font-family: Consolas, Monaco, monospace; font-size: 10px;">
                                    <t t-esc="'{:,.2f}'.format(doc.report_data.get('total_credit', 0))"/>
                                </td>
                                <td style="text-align: right; padding: 10px 8px; font-weight: 700; font-family: Consolas, Monaco, monospace; font-size: 10px;">
                                    <t t-esc="'{:,.2f}'.format(doc.report_data.get('closing_balance', 0))"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                    <!-- Closing Balance -->
                    <div style="background-color: #dcfce7; border: 1px solid #16a34a; border-radius: 4px; padding: 10px 15px; margin-bottom: 20px;">
                        <table width="100%" style="border-collapse: collapse;">
                            <tr>
                                <td style="vertical-align: middle;">
                                    <span style="font-size: 10px; font-weight: 600; color: #14532d;">Closing Balance</span>
                                </td>
                                <td style="text-align: right; vertical-align: middle;">
                                    <span style="font-size: 11px; font-weight: 700; font-family: Consolas, Monaco, monospace; color: #14532d;">
                                        <t t-esc="'{:,.2f}'.format(doc.report_data.get('closing_balance', 0))"/>
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Notes Section -->
                    <div style="margin-top: 25px; background-color: #f8fafc; border-left: 3px solid #5B6BBB; padding: 12px 15px;">
                        <div style="font-size: 10px; font-weight: 600; color: #1e293b; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 0.5px;">
                            Notes to Cash Book
                        </div>
                        <ul style="margin: 0; padding-left: 20px; font-size: 9px; color: #475569; line-height: 1.6;">
                            <li>Opening balance represents cash in hand at the start of the period</li>
                            <li>All transactions are from designated cash journals</li>
                            <li>Closing balance = Opening balance + Receipts (Debit) - Payments (Credit)</li>
                        </ul>
                    </div>

                    <!-- Corporate Footer -->
                    <t t-call="ops_matrix_accounting.report_corporate_footer"/>

                </div>
            </t>
        </t>
    </template>

    <record id="action_report_cash_book" model="ir.actions.report">
        <field name="name">Cash Book</field>
        <field name="model">ops.cash.book.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ops_matrix_accounting.report_cash_book_corporate</field>
        <field name="report_file">ops_matrix_accounting.report_cash_book_corporate</field>
        <field name="print_report_name">'Cash_Book_%s_%s' % (object.date_from, object.date_to)</field>
        <field name="binding_type">report</field>
    </record>

    <!-- ==================== DAY BOOK REPORT ==================== -->

    <template id="report_day_book_corporate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="doc.company_id or env.company"/>

                <div class="page" style="font-family: Arial, Helvetica, sans-serif; color: #1e293b;">

                    <!-- Corporate Header -->
                    <t t-call="ops_matrix_accounting.report_corporate_header"/>

                    <!-- Report Title -->
                    <t t-call="ops_matrix_accounting.report_corporate_title">
                        <t t-set="report_title" t-value="'Day Book'"/>
                        <t t-set="report_pillar" t-value="'Daily Books'"/>
                        <t t-set="date_end" t-value="doc.date"/>
                    </t>

                    <!-- Filter Info Bar -->
                    <t t-call="ops_matrix_accounting.report_filter_bar">
                        <t t-set="doc" t-value="doc"/>
                    </t>

                    <!-- Journal Sections -->
                    <t t-foreach="doc.report_data.get('journals_data', [])" t-as="journal">
                        <div style="margin-bottom: 30px; page-break-inside: avoid;">

                            <!-- Journal Header -->
                            <div style="background-color: #f8fafc; border-left: 4px solid #5B6BBB; padding: 10px 15px; margin-bottom: 15px;">
                                <span style="font-size: 12px; font-weight: 700; color: #1e293b;">
                                    Journal: <t t-esc="journal.get('journal', '')"/>
                                </span>
                            </div>

                            <!-- Journal Entries -->
                            <t t-foreach="journal.get('moves', [])" t-as="move">
                                <div style="margin-bottom: 15px;">
                                    <!-- Move Header -->
                                    <div style="background-color: #fef3c7; padding: 8px 12px; margin-bottom: 5px; font-size: 10px; font-weight: 600; color: #92400e;">
                                        <t t-esc="move.get('name', '')"/>
                                        <t t-if="move.get('partner')"> - <t t-esc="move['partner']"/></t>
                                        <t t-if="move.get('ref')"> (<t t-esc="move['ref']"/>)</t>
                                    </div>

                                    <!-- Move Lines Table -->
                                    <table width="100%" style="border-collapse: collapse; font-size: 9px;">
                                        <thead>
                                            <tr style="background-color: #f8fafc; border-bottom: 1px solid #e2e8f0;">
                                                <th style="text-align: left; padding: 5px 8px; font-weight: 600; color: #475569;">Account</th>
                                                <th style="text-align: left; padding: 5px 8px; font-weight: 600; color: #475569;">Description</th>
                                                <th style="text-align: right; padding: 5px 8px; font-weight: 600; color: #475569;">Debit</th>
                                                <th style="text-align: right; padding: 5px 8px; font-weight: 600; color: #475569;">Credit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="move.get('lines', [])" t-as="line">
                                                <tr style="border-bottom: 1px solid #f1f5f9;">
                                                    <td style="padding: 5px 8px; color: #475569;">
                                                        <t t-esc="line.get('account', '')"/>
                                                    </td>
                                                    <td style="padding: 5px 8px; color: #475569;">
                                                        <t t-esc="line.get('label', '')"/>
                                                    </td>
                                                    <td style="text-align: right; padding: 5px 8px; font-family: Consolas, Monaco, monospace;">
                                                        <t t-if="line.get('debit', 0) > 0">
                                                            <t t-esc="'{:,.2f}'.format(line['debit'])"/>
                                                        </t>
                                                        <t t-else="">
                                                            <span style="color: #94a3b8;">-</span>
                                                        </t>
                                                    </td>
                                                    <td style="text-align: right; padding: 5px 8px; font-family: Consolas, Monaco, monospace;">
                                                        <t t-if="line.get('credit', 0) > 0">
                                                            <t t-esc="'{:,.2f}'.format(line['credit'])"/>
                                                        </t>
                                                        <t t-else="">
                                                            <span style="color: #94a3b8;">-</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>

                            <!-- Journal Total -->
                            <div style="background-color: #f8fafc; padding: 8px 12px; text-align: right; font-size: 10px; font-weight: 600; color: #475569;">
                                Journal Total:
                                Debit <span style="font-family: Consolas, Monaco, monospace;"><t t-esc="'{:,.2f}'.format(journal.get('total_debit', 0))"/></span> |
                                Credit <span style="font-family: Consolas, Monaco, monospace;"><t t-esc="'{:,.2f}'.format(journal.get('total_credit', 0))"/></span>
                            </div>
                        </div>
                    </t>

                    <!-- Grand Total -->
                    <div style="background-color: #1e293b; color: #ffffff; padding: 12px 15px; text-align: right; font-size: 11px; font-weight: 700; margin-top: 20px;">
                        GRAND TOTAL:
                        Debit <span style="font-family: Consolas, Monaco, monospace;"><t t-esc="'{:,.2f}'.format(doc.report_data.get('grand_total_debit', 0))"/></span> |
                        Credit <span style="font-family: Consolas, Monaco, monospace;"><t t-esc="'{:,.2f}'.format(doc.report_data.get('grand_total_credit', 0))"/></span>
                    </div>

                    <!-- Notes Section -->
                    <div style="margin-top: 25px; background-color: #f8fafc; border-left: 3px solid #5B6BBB; padding: 12px 15px;">
                        <div style="font-size: 10px; font-weight: 600; color: #1e293b; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 0.5px;">
                            Notes to Day Book
                        </div>
                        <ul style="margin: 0; padding-left: 20px; font-size: 9px; color: #475569; line-height: 1.6;">
                            <li>All journal entries posted on the specified date</li>
                            <li>Grouped by journal for organizational clarity</li>
                            <li>Each move shows full double-entry with balanced debits and credits</li>
                        </ul>
                    </div>

                    <!-- Corporate Footer -->
                    <t t-call="ops_matrix_accounting.report_corporate_footer"/>

                </div>
            </t>
        </t>
    </template>

    <record id="action_report_day_book" model="ir.actions.report">
        <field name="name">Day Book</field>
        <field name="model">ops.day.book.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ops_matrix_accounting.report_day_book_corporate</field>
        <field name="report_file">ops_matrix_accounting.report_day_book_corporate</field>
        <field name="print_report_name">'Day_Book_%s' % object.date</field>
        <field name="binding_type">report</field>
    </record>

    <!-- ==================== BANK BOOK REPORT ==================== -->

    <template id="report_bank_book_corporate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="doc.company_id or env.company"/>

                <div class="page" style="font-family: Arial, Helvetica, sans-serif; color: #1e293b;">

                    <!-- Corporate Header -->
                    <t t-call="ops_matrix_accounting.report_corporate_header"/>

                    <!-- Report Title -->
                    <t t-call="ops_matrix_accounting.report_corporate_title">
                        <t t-set="report_title" t-value="'Bank Book'"/>
                        <t t-set="report_pillar" t-value="'Daily Books'"/>
                        <t t-set="date_from" t-value="doc.date_from"/>
                        <t t-set="date_to" t-value="doc.date_to"/>
                    </t>

                    <!-- Filter Info Bar -->
                    <t t-call="ops_matrix_accounting.report_filter_bar">
                        <t t-set="doc" t-value="doc"/>
                    </t>

                    <!-- Bank Account Sections -->
                    <t t-foreach="doc.report_data.get('banks_data', [])" t-as="bank">
                        <div style="margin-bottom: 30px; page-break-inside: avoid;">

                            <!-- Bank Header -->
                            <div style="background-color: #5B6BBB; color: #ffffff; padding: 12px 15px; margin-bottom: 10px;">
                                <span style="font-size: 12px; font-weight: 700;">
                                    <t t-esc="bank.get('journal', '')"/>
                                </span>
                                <span style="font-size: 10px; font-weight: 400; margin-left: 10px;">
                                    (<t t-esc="bank.get('account', '')"/>)
                                </span>
                            </div>

                            <!-- Opening Balance -->
                            <div style="background-color: #fef3c7; border: 1px solid #f59e0b; border-radius: 4px; padding: 8px 12px; margin-bottom: 10px;">
                                <table width="100%" style="border-collapse: collapse;">
                                    <tr>
                                        <td style="font-size: 9px; font-weight: 600; color: #92400e;">Opening Balance</td>
                                        <td style="text-align: right; font-size: 10px; font-weight: 700; font-family: Consolas, Monaco, monospace; color: #92400e;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('opening_balance', 0))"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Transaction Table -->
                            <table width="100%" style="border-collapse: collapse; margin-bottom: 10px; font-size: 9px;">
                                <thead>
                                    <tr style="border-bottom: 2px solid #1e293b; background-color: #f8fafc;">
                                        <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Date</th>
                                        <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Reference</th>
                                        <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Partner</th>
                                        <th style="text-align: left; padding: 6px 8px; font-weight: 600; color: #475569;">Description</th>
                                        <th style="text-align: right; padding: 6px 8px; font-weight: 600; color: #475569;">Debit</th>
                                        <th style="text-align: right; padding: 6px 8px; font-weight: 600; color: #475569;">Credit</th>
                                        <th style="text-align: right; padding: 6px 8px; font-weight: 600; color: #475569;">Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="bank.get('lines', [])" t-as="line">
                                        <tr style="border-bottom: 1px solid #f1f5f9;">
                                            <td style="padding: 6px 8px; color: #475569;">
                                                <t t-esc="line.get('date', '')"/>
                                            </td>
                                            <td style="padding: 6px 8px; color: #475569;">
                                                <t t-esc="line.get('ref', '') or '-'"/>
                                            </td>
                                            <td style="padding: 6px 8px; color: #475569;">
                                                <t t-esc="line.get('partner', '') or '-'"/>
                                            </td>
                                            <td style="padding: 6px 8px; color: #475569;">
                                                <t t-esc="line.get('label', '')"/>
                                            </td>
                                            <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                                <t t-if="line.get('debit', 0) > 0">
                                                    <t t-esc="'{:,.2f}'.format(line['debit'])"/>
                                                </t>
                                                <t t-else="">
                                                    <span style="color: #94a3b8;">-</span>
                                                </t>
                                            </td>
                                            <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                                <t t-if="line.get('credit', 0) > 0">
                                                    <t t-esc="'{:,.2f}'.format(line['credit'])"/>
                                                </t>
                                                <t t-else="">
                                                    <span style="color: #94a3b8;">-</span>
                                                </t>
                                            </td>
                                            <td style="text-align: right; padding: 6px 8px; font-weight: 500; font-family: Consolas, Monaco, monospace;">
                                                <t t-esc="'{:,.2f}'.format(line.get('balance', 0))"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr style="border-top: 1px solid #e2e8f0; background-color: #f8fafc;">
                                        <td colspan="4" style="padding: 8px; font-weight: 600; text-align: right; font-size: 10px;">TOTALS</td>
                                        <td style="text-align: right; padding: 8px; font-weight: 600; font-family: Consolas, Monaco, monospace; font-size: 10px;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('total_debit', 0))"/>
                                        </td>
                                        <td style="text-align: right; padding: 8px; font-weight: 600; font-family: Consolas, Monaco, monospace; font-size: 10px;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('total_credit', 0))"/>
                                        </td>
                                        <td style="text-align: right; padding: 8px; font-weight: 600; font-family: Consolas, Monaco, monospace; font-size: 10px;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('closing_balance', 0))"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Closing Balance -->
                            <div style="background-color: #dcfce7; border: 1px solid #16a34a; border-radius: 4px; padding: 8px 12px;">
                                <table width="100%" style="border-collapse: collapse;">
                                    <tr>
                                        <td style="font-size: 9px; font-weight: 600; color: #14532d;">Closing Balance</td>
                                        <td style="text-align: right; font-size: 10px; font-weight: 700; font-family: Consolas, Monaco, monospace; color: #14532d;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('closing_balance', 0))"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>

                    <!-- Summary Section -->
                    <div style="margin-top: 30px; border-top: 2px solid #5B6BBB; padding-top: 20px;">
                        <h3 style="text-align: center; font-size: 12px; font-weight: 700; color: #1e293b; margin-bottom: 15px;">SUMMARY</h3>
                        <table width="70%" style="border-collapse: collapse; margin: 0 auto; font-size: 9px;">
                            <thead>
                                <tr style="background-color: #5B6BBB; color: #ffffff;">
                                    <th style="text-align: left; padding: 8px; font-weight: 600;">Bank Account</th>
                                    <th style="text-align: right; padding: 8px; font-weight: 600;">Opening</th>
                                    <th style="text-align: right; padding: 8px; font-weight: 600;">Debit</th>
                                    <th style="text-align: right; padding: 8px; font-weight: 600;">Credit</th>
                                    <th style="text-align: right; padding: 8px; font-weight: 600;">Closing</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.report_data.get('banks_data', [])" t-as="bank">
                                    <tr style="border-bottom: 1px solid #f1f5f9;">
                                        <td style="padding: 6px 8px; color: #475569;">
                                            <t t-esc="bank.get('journal', '')"/>
                                        </td>
                                        <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('opening_balance', 0))"/>
                                        </td>
                                        <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('total_debit', 0))"/>
                                        </td>
                                        <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('total_credit', 0))"/>
                                        </td>
                                        <td style="text-align: right; padding: 6px 8px; font-family: Consolas, Monaco, monospace;">
                                            <t t-esc="'{:,.2f}'.format(bank.get('closing_balance', 0))"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr style="background-color: #1e293b; color: #ffffff; font-weight: 700;">
