    <!-- ================================================================== -->
    <!-- PROFIT &amp; LOSS WIZARD                                            -->
    <!-- ================================================================== -->

    <record id="view_ops_pnl_wizard_form" model="ir.ui.view">
        <field name="name">ops.pnl.report.wizard.form</field>
        <field name="model">ops.pnl.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Profit &amp; Loss Statement">
                <group>
                    <group string="Period">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="target_move"/>
                    </group>
                    <group string="Comparative Period">
                        <field name="comparative"/>
                        <field name="comparative_date_from"
                               invisible="not comparative"/>
                        <field name="comparative_date_to"
                               invisible="not comparative"/>
                    </group>
                </group>
                <group>
                    <group string="Matrix Dimensions">
                        <field name="branch_ids" widget="many2many_tags"/>
                        <field name="business_unit_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Options">
                        <field name="show_percentage"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_pdf" string="PDF"
                            type="object" class="btn-primary" icon="fa-file-pdf-o"/>
                    <button name="action_export_to_excel" string="Excel"
                            type="object" class="btn-primary" icon="fa-file-excel-o"/>
                    <button name="action_view_in_browser" string="View"
                            type="object" class="btn-secondary" icon="fa-desktop"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pnl_wizard" model="ir.actions.act_window">
        <field name="name">Profit &amp; Loss</field>
        <field name="res_model">ops.pnl.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


