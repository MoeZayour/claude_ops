<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================================================================== -->
    <!-- GENERAL LEDGER WIZARD                                               -->
    <!-- ================================================================== -->

    <record id="view_ops_gl_wizard_form" model="ir.ui.view">
        <field name="name">ops.gl.report.wizard.form</field>
        <field name="model">ops.gl.report.wizard</field>
        <field name="arch" type="xml">
            <form string="General Ledger">
                <group>
                    <group string="Period">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="target_move"/>
                    </group>
                    <group string="Filters">
                        <field name="account_ids" widget="many2many_tags"/>
                        <field name="journal_ids" widget="many2many_tags"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group string="Matrix Dimensions">
                        <field name="branch_ids" widget="many2many_tags"/>
                        <field name="business_unit_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Options">
                        <field name="display_account"/>
                        <field name="sort_by"/>
                        <field name="report_format"/>
                        <field name="include_initial_balance"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_pdf" string="PDF"
                            type="object" class="btn-primary" icon="fa-file-pdf-o"/>
                    <button name="action_export_to_excel" string="Excel"
                            type="object" class="btn-primary" icon="fa-file-excel-o"/>
                    <button name="action_view_in_browser" string="View"
                            type="object" class="btn-secondary" icon="fa-desktop"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_gl_wizard" model="ir.actions.act_window">
        <field name="name">General Ledger</field>
        <field name="res_model">ops.gl.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


