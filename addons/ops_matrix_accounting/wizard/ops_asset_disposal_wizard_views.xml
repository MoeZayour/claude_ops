<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ops_asset_disposal_wizard_form" model="ir.ui.view">
            <field name="name">ops.asset.disposal.wizard.form</field>
            <field name="model">ops.asset.disposal.wizard</field>
            <field name="arch" type="xml">
                <form string="Dispose Asset">
                    <group name="group_1">
                        <field name="asset_id" readonly="1" force_save="1"/>
                        <field name="disposal_date"/>
                        <field name="reason"/>
                    </group>
                    <footer>
                        <button name="action_dispose_asset" string="Dispose" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
