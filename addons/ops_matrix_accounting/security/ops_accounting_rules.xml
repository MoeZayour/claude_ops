        <!-- ============================================================ -->
        <!-- OPS MATRIX ACCOUNTING - BRANCH ISOLATION RECORD RULES        -->
        <!-- ============================================================ -->
        <!--
            Purpose: Ensure users only see accounting data for their assigned branches.
            Pattern: Users see records from their allowed branches OR records with no branch (legacy/system).

            User Field: user.ops_allowed_branch_ids (Many2many to ops.branch)

            Groups:
            - group_ops_user: Regular users - branch restricted
            - group_ops_manager: Managers - can see all branches (override rules)
            - base.group_system: System admin - full access (override rules)
        -->

        <!-- ============================================================ -->
        <!-- 1. PDC RECEIVABLE - BRANCH ISOLATION                         -->
        <!-- ============================================================ -->

        <!-- PDC Receivable: Branch Isolation for OPS Users -->
        <record id="rule_ops_pdc_receivable_branch_isolation" model="ir.rule">
            <field name="name">OPS PDC Receivable: Branch Isolation</field>
            <field name="model_id" ref="model_ops_pdc_receivable"/>
            <field name="domain_force">[
                '|',
                ('ops_branch_id', '=', False),
                ('ops_branch_id', 'in', user.ops_allowed_branch_ids.ids)
            ]</field>
            <field name="groups" eval="[(4, ref('ops_matrix_core.group_ops_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- PDC Receivable: Manager Override (Full Access) -->
        <record id="rule_ops_pdc_receivable_manager_override" model="ir.rule">
            <field name="name">OPS PDC Receivable: Manager Full Access</field>
            <field name="model_id" ref="model_ops_pdc_receivable"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('ops_matrix_core.group_ops_manager'))]"/>
        </record>

        <!-- PDC Receivable: System Admin Override (Full Access) -->
