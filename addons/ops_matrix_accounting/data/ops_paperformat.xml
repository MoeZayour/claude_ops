<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        OPS Matrix Paper Format Configuration
        =====================================
        Tight margins optimized for OPS corporate reports.
        Header repeats via wkhtmltopdf .header div (~18mm).
        Footer repeats via wkhtmltopdf .footer div (~8mm).
    -->

    <!-- OPS Corporate A4 (Portrait) -->
    <record id="paperformat_ops_corporate_a4" model="report.paperformat">
        <field name="name">OPS Corporate A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">96</field>
    </record>

    <!-- OPS A4 Financial Report (Portrait) -->
    <record id="paperformat_ops_a4_financial" model="report.paperformat">
        <field name="name">OPS A4 Financial Report</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">96</field>
    </record>

    <!-- OPS Corporate A4 Landscape -->
    <record id="paperformat_ops_corporate_landscape" model="report.paperformat">
        <field name="name">OPS Corporate A4 Landscape</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">96</field>
    </record>

    <!-- OPS A4 Financial Report (Landscape) -->
    <record id="paperformat_ops_a4_landscape" model="report.paperformat">
        <field name="name">OPS A4 Financial Report (Landscape)</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">96</field>
    </record>

    <!-- OPS Letter Financial Report (US Standard) -->
    <record id="paperformat_ops_letter" model="report.paperformat">
        <field name="name">OPS Letter Financial Report</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">96</field>
    </record>

</odoo>
