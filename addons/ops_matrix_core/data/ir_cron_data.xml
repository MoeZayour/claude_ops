<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_sla_monitor" model="ir.cron">
        <field name="name">OPS: Monitor SLA Instances</field>
        <field name="model_id" ref="ops_matrix_core.model_ops_sla_instance"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_sla_breaches()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_delegation_expiry" model="ir.cron">
        <field name="name">OPS: Check Delegation Expiry</field>
        <field name="model_id" ref="ops_matrix_core.model_ops_persona_delegation"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_delegation_expiry()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_api_key_expiry" model="ir.cron">
        <field name="name">OPS: Check API Key Expiry</field>
        <field name="model_id" ref="ops_matrix_core.model_ops_api_key"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_api_key_expiry()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_approval_reminder" model="ir.cron">
        <field name="name">OPS: Send Approval Reminders</field>
        <field name="model_id" ref="ops_matrix_core.model_ops_approval_request"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_approval_reminders()</field>
        <field name="interval_number">4</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_dashboard_refresh" model="ir.cron">
        <field name="name">OPS: Refresh Dashboard Data</field>
        <field name="model_id" ref="ops_matrix_core.model_ops_dashboard_widget"/>
        <field name="state">code</field>
        <field name="code">model.cron_refresh_dashboard_data()</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>
</odoo>
