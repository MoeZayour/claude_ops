        <!-- ========================================================== -->
        <!-- SALES REPRESENTATIVE - HIDE COST/MARGIN FIELDS            -->
        <!-- ========================================================== -->
        
        <!-- Product: Hide cost_price from Sales Reps -->
        <record id="field_visibility_rule_product_cost_price_sales" model="ops.field.visibility.rule">
            <field name="model_name">product.template</field>
            <field name="field_name">standard_price</field>
            <field name="field_label">Cost Price</field>
            <field name="security_group_id" ref="sales_team.group_sale_salesman"/>
            <field name="visibility_mode">hidden</field>
            <field name="is_active">True</field>
            <field name="enabled">False</field>
            <field name="description">Sales representatives cannot see cost price</field>
        </record>
        
