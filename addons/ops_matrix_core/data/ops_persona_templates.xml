        <!-- ============================================================ -->
        <!-- CORPORATE MATRIX PERSONA SUITE WITH SOD HIERARCHY           -->
        <!-- Updated with Segregation of Duties Authority Fields         -->
        <!-- ============================================================ -->
        
        <!-- ============================================================ -->
        <!-- TOP LEVEL - FINANCIAL CONTROLLER (ANCHOR)                   -->
        <!-- ============================================================ -->
        
        <!-- Financial Controller - SoD Anchor (No Parent) -->
        <record id="persona_financial_controller" model="ops.persona">
            <field name="name">Financial Controller</field>
            <field name="code">FIN_CTRL</field>
            <field name="description">Final authority for Finance, Sales, and Purchase operations. Validates invoices and posts journal entries. Cannot execute payments (separation from Treasury).</field>
            <field name="job_level">executive</field>
            <field name="is_approver" eval="True"/>
            <field name="can_approve_orders" eval="True"/>
            <field name="can_approve_expenses" eval="True"/>
            <field name="can_approve_leave" eval="True"/>
            <field name="can_manage_team" eval="True"/>
            <!-- SoD Authority Fields -->
            <field name="can_modify_product_master" eval="False"/>
            <field name="can_access_cost_prices" eval="True"/>
            <field name="can_validate_invoices" eval="True"/>
            <field name="can_post_journal_entries" eval="True"/>
            <field name="can_execute_payments" eval="False"/>
            <field name="can_adjust_inventory" eval="False"/>
            <field name="can_manage_pdc" eval="True"/>
            <field name="active" eval="True"/>
        </record>
        
