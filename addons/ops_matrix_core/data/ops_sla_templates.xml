<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ============================================== -->
        <!-- OPS SLA POLICY TEMPLATES                      -->
        <!-- Reference templates for service level goals   -->
        <!-- All archived by default (active="False")      -->
        <!-- ============================================== -->
        
        <!-- NOTE: target_duration represents the resolution/completion deadline in hours -->
        <!-- Response times should be tracked separately in actual implementation -->
        
        <!-- 1. Platinum Support: 1-hour response / 4-hour resolution (VIP Corporate clients) -->
        <record id="sla_template_platinum_support" model="ops.sla.template">
            <field name="name">Platinum Support - VIP Corporate (Response: 1hr | Resolution: 4hrs)</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="target_duration">4.0</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- 2. Gold Support: 4-hour response / 24-hour resolution -->
        <record id="sla_template_gold_support" model="ops.sla.template">
            <field name="name">Gold Support - Priority Business (Response: 4hrs | Resolution: 24hrs)</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="target_duration">24.0</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- 3. Internal IT Critical: 2-hour response / 8-hour resolution (System-down scenarios) -->
        <record id="sla_template_it_critical" model="ops.sla.template">
            <field name="name">Internal IT Critical - System Down (Response: 2hrs | Resolution: 8hrs)</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="target_duration">8.0</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- 4. Standard Sales Inquiry: 24-hour response (For new leads) -->
        <record id="sla_template_sales_inquiry" model="ops.sla.template">
            <field name="name">Standard Sales Inquiry - New Leads (Response: 24hrs)</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="target_duration">24.0</field>
            <field name="active" eval="False"/>
        </record>
        
    </data>
</odoo>
