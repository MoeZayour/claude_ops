<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        OPS MATRIX FRAMEWORK - GOLDEN USER TEMPLATES
        ============================================
        Deactivated template users with pre-defined Matrix Roles for easy cloning.

        USAGE:
        1. Go to Settings > Users & Companies > Users
        2. Enable "Show Archived" filter to see templates
        3. Select a template user and click "Duplicate"
        4. Update the cloned user's name, login, and password
        5. Assign the correct Branch and Business Units
        6. Activate the user

        TEMPLATES:
        - [TEMPLATE] - Financial Controller: Full Finance access
        - [TEMPLATE] - Logistics Officer: Warehouse/Stock access
        - [TEMPLATE] - Sales Executive: Sales/CRM access
        - [TEMPLATE] - Branch Manager: Multi-department read access
    -->

    <data noupdate="1">

        <!-- =================================================== -->
        <!-- TEMPLATE INFRASTRUCTURE                             -->
        <!-- =================================================== -->

        <!-- Template Business Unit (placeholder for template users) -->
        <record id="bu_template" model="ops.business.unit">
            <field name="name">[TEMPLATE] Business Unit</field>
            <field name="code">TMPL_BU</field>
            <field name="active" eval="False"/>
        </record>

        <!-- Template Branch (placeholder for template users) -->
        <record id="branch_template" model="ops.branch">
            <field name="name">[TEMPLATE] Branch</field>
            <field name="code">TMPL_BR</field>
            <field name="active" eval="False"/>
        </record>

        <!-- =================================================== -->
        <!-- GOLDEN USER TEMPLATES                               -->
        <!-- =================================================== -->

        <!--
            TEMPLATE 1: Financial Controller
            ================================
            Full access to Financials, Treasury, Assets, and Matrix Reports.
            Odoo Groups: Account Manager
        -->
        <record id="user_template_financial_controller" model="res.users">
            <field name="name">[TEMPLATE] - Financial Controller</field>
            <field name="login">tmpl_finance</field>
            <field name="password">template_password_do_not_use</field>
            <field name="active" eval="False"/>
            <field name="ops_persona_ids" eval="[(6, 0, [ref('ops_matrix_core.persona_financial_controller')])]"/>
            <field name="primary_branch_id" ref="branch_template"/>
            <field name="ops_allowed_branch_ids" eval="[(6, 0, [ref('branch_template')])]"/>
            <field name="ops_allowed_business_unit_ids" eval="[(6, 0, [ref('bu_template')])]"/>
            <field name="group_ids" eval="[(4, ref('base.group_user')), (4, ref('account.group_account_manager'))]"/>
        </record>

        <!--
            TEMPLATE 2: Logistics Officer
            =============================
            Can move stock and request assets. No Accounting access.
            Odoo Groups: Stock User
        -->
        <record id="user_template_logistics_officer" model="res.users">
            <field name="name">[TEMPLATE] - Logistics Officer</field>
            <field name="login">tmpl_logistics</field>
            <field name="password">template_password_do_not_use</field>
            <field name="active" eval="False"/>
            <field name="ops_persona_ids" eval="[(6, 0, [ref('ops_matrix_core.persona_logistics_clerk')])]"/>
            <field name="primary_branch_id" ref="branch_template"/>
            <field name="ops_allowed_branch_ids" eval="[(6, 0, [ref('branch_template')])]"/>
            <field name="ops_allowed_business_unit_ids" eval="[(6, 0, [ref('bu_template')])]"/>
            <field name="group_ids" eval="[(4, ref('base.group_user')), (4, ref('stock.group_stock_user'))]"/>
        </record>

        <!--
            TEMPLATE 3: Sales Executive
            ===========================
            Can create Orders. Must tag Business Units. No Accounting access.
            Odoo Groups: Sales Manager
        -->
        <record id="user_template_sales_executive" model="res.users">
            <field name="name">[TEMPLATE] - Sales Executive</field>
            <field name="login">tmpl_sales</field>
            <field name="password">template_password_do_not_use</field>
            <field name="active" eval="False"/>
            <field name="ops_persona_ids" eval="[(6, 0, [ref('ops_matrix_core.persona_sales_rep')])]"/>
            <field name="primary_branch_id" ref="branch_template"/>
            <field name="ops_allowed_branch_ids" eval="[(6, 0, [ref('branch_template')])]"/>
            <field name="ops_allowed_business_unit_ids" eval="[(6, 0, [ref('bu_template')])]"/>
            <field name="group_ids" eval="[(4, ref('base.group_user')), (4, ref('sales_team.group_sale_manager'))]"/>
        </record>

        <!--
            TEMPLATE 4: Branch Manager
            ==========================
            Read-only on Reports. Can approve limits.
            Odoo Groups: Account User + Sales Manager
        -->
        <record id="user_template_branch_manager" model="res.users">
            <field name="name">[TEMPLATE] - Branch Manager</field>
            <field name="login">tmpl_manager</field>
            <field name="password">template_password_do_not_use</field>
            <field name="active" eval="False"/>
            <field name="ops_persona_ids" eval="[(6, 0, [ref('ops_matrix_core.persona_sales_manager')])]"/>
            <field name="primary_branch_id" ref="branch_template"/>
            <field name="ops_allowed_branch_ids" eval="[(6, 0, [ref('branch_template')])]"/>
            <field name="ops_allowed_business_unit_ids" eval="[(6, 0, [ref('bu_template')])]"/>
            <field name="group_ids" eval="[(4, ref('base.group_user')), (4, ref('account.group_account_user')), (4, ref('sales_team.group_sale_manager'))]"/>
        </record>

    </data>
</odoo>
