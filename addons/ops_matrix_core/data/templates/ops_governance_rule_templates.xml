<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gov_rule_template_so_discount_10" model="ops.governance.rule">
        <field name="name">Sales Discount more than 10%</field>
        <field name="description">Requires approval when discount exceeds 10%</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="model_name">sale.order</field>
        <field name="rule_type">approval</field>
        <field name="trigger_condition">discount_percent</field>
        <field name="threshold_value">10.0</field>
        <field name="comparison_operator">greater_than</field>
        <field name="active">False</field>
        <field name="sequence">10</field>
    </record>

    <record id="gov_rule_template_so_amount_10000" model="ops.governance.rule">
        <field name="name">Sales Order more than 10000</field>
        <field name="description">Requires approval for orders exceeding 10000</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="model_name">sale.order</field>
        <field name="rule_type">approval</field>
        <field name="trigger_condition">amount_total</field>
        <field name="threshold_value">10000.0</field>
        <field name="comparison_operator">greater_than</field>
        <field name="active">False</field>
        <field name="sequence">20</field>
    </record>

    <record id="gov_rule_template_po_amount_5000" model="ops.governance.rule">
        <field name="name">Purchase Order more than 5000</field>
        <field name="description">Requires approval for POs exceeding 5000</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="model_name">purchase.order</field>
        <field name="rule_type">approval</field>
        <field name="trigger_condition">amount_total</field>
        <field name="threshold_value">5000.0</field>
        <field name="comparison_operator">greater_than</field>
        <field name="active">False</field>
        <field name="sequence">30</field>
    </record>
</odoo>
