<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- SO Documentation Report -->
    <record id="action_report_sale_order_documentation" model="ir.actions.report">
        <field name="name">SO Documentation</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ops_matrix_core.report_sale_order_documentation</field>
        <field name="report_file">ops_matrix_core.report_sale_order_documentation</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
    
    <!-- Report Template -->
    <template id="report_sale_order_documentation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Sale Order Documentation</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Order:</strong> <span t-field="o.name"/><br/>
                                <strong>Customer:</strong> <span t-field="o.partner_id.name"/><br/>
                                <strong>Date:</strong> <span t-field="o.date_order"/>
                            </div>
                        </div>
                        
                        <h3>Product Documents</h3>
                        <t t-set="documents" t-value="o._get_unique_product_documents()"/>
                        <t t-if="documents">
                            <div class="row">
                                <t t-foreach="documents" t-as="doc">
                                    <div class="col-12 mt16">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <i class="fa fa-file-pdf-o"/> 
                                                    <span t-esc="doc['name']"/>
                                                </h5>
                                                <p class="card-text">
                                                    <strong>Products:</strong>
                                                    <t t-foreach="doc['product_ids']" t-as="product">
                                                        <span t-esc="product.name"/>
                                                        <t t-if="not product_last">, </t>
                                                    </t>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </t>
                        <t t-else="">
                            <p class="text-muted">No product documents attached.</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    
</odoo>
