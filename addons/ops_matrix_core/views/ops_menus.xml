<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================
         OPS MATRIX CORE - CORPORATE MENU STRUCTURE

         Architecture:
         1. APPROVALS (Root App) - Seq 10 - All internal users
         2. Sales - Seq 20 (Standard)
         3. Purchase - Seq 30 (Standard)
         4. Inventory - Seq 40 (Standard)
         5. ACCOUNTING - Seq 50 (Standard - absorbs Assets, Budgets, PDC)
         6. REPORTING (Root App) - Seq 60 - Manager/Executive only
         7. HR - Seq 70 (Standard)
         8. SETTINGS - Seq 80 (Standard - absorbs OPS Configuration)

         OPS Matrix root menu is DISABLED (consolidated into Settings)
         ================================================================ -->

    <!-- =================== DISABLE LEGACY OPS MATRIX APP =================== -->
    <!-- Old OPS Matrix root menu - now consolidated into Settings -->
    <menuitem id="menu_ops_matrix_root"
              name="OPS Matrix"
              active="False"
              sequence="1000"/>

    <!-- =================== 1. APPROVALS APP (Seq 10) =================== -->
    <!-- Root App: Visible to ALL internal users AND native admin (group_system) -->
    <menuitem id="menu_ops_approvals_root"
              name="Approvals"
              web_icon="ops_matrix_core,static/description/approvals_icon.png"
              sequence="10"
              groups="base.group_system,ops_matrix_core.group_ops_user"/>

    <!-- =================== 2-4. STANDARD APPS SEQUENCING =================== -->
    <!-- Re-sequence standard Odoo apps using record update (preserves names) -->
    <record id="sale.sale_menu_root" model="ir.ui.menu">
        <field name="sequence">20</field>
    </record>

    <record id="purchase.menu_purchase_root" model="ir.ui.menu">
        <field name="sequence">30</field>
    </record>

    <record id="stock.menu_stock_root" model="ir.ui.menu">
        <field name="sequence">40</field>
    </record>

    <record id="account.menu_finance" model="ir.ui.menu">
        <field name="sequence">50</field>
    </record>

    <!-- =================== 5. REPORTING APP (Seq 60) =================== -->
    <!-- DISABLED: Reporting consolidated into Accounting > Reporting and Settings > OPS Framework -->
    <menuitem id="menu_ops_reporting"
              name="Reporting"
              web_icon="ops_matrix_core,static/description/reporting_icon.png"
              sequence="60"
              active="False"
              groups="base.group_system,ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_executive"/>

    <!-- =================== 6-7. MORE STANDARD APPS =================== -->
    <record id="hr.menu_hr_root" model="ir.ui.menu">
        <field name="sequence">70</field>
    </record>

    <record id="base.menu_administration" model="ir.ui.menu">
        <field name="sequence">80</field>
    </record>

    <!-- =================== OPS FRAMEWORK UNDER SETTINGS =================== -->
    <!-- OPS Framework configuration consolidated under Settings (Administration) -->
    <menuitem id="menu_ops_settings_root"
              name="OPS Framework"
              parent="base.menu_administration"
              sequence="100"
              groups="base.group_system"/>

    <!-- =================== DASHBOARDS (Under Native Dashboards App) =================== -->
    <!-- OPS Dashboards moved to native Dashboards app for better discoverability -->
    <menuitem id="menu_ops_dashboards"
              name="OPS Matrix"
              parent="spreadsheet_dashboard.spreadsheet_dashboard_menu_root"
              sequence="10"
              groups="base.group_system,ops_matrix_core.group_ops_executive,ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_user"/>

    <!-- =================== DEPRECATED REPORTING SUB-MENUS =================== -->
    <!-- Financial Reports - DISABLED (use Accounting > Reporting > Matrix Financial Intelligence) -->
    <menuitem id="menu_ops_financial_reports"
              name="Financial Reports"
              parent="menu_ops_reporting"
              sequence="20"
              active="False"
              groups="base.group_system,ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_executive"/>

    <!-- Operational Reports - DISABLED (use Accounting > Reporting) -->
    <menuitem id="menu_ops_operational_reports"
              name="Operational Reports"
              parent="menu_ops_reporting"
              sequence="30"
              active="False"
              groups="base.group_system,ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_executive"/>

    <!-- =================== GOVERNANCE (Under OPS Framework in Settings) =================== -->
    <!-- Governance relocated to Settings > OPS Framework -->
    <menuitem id="menu_ops_governance_root"
              name="Governance"
              parent="menu_ops_settings_root"
              sequence="40"
              groups="base.group_system,ops_matrix_core.group_ops_manager"/>

    <!-- =================== OPS CONFIGURATION (Under Settings) =================== -->
    <!-- Matrix Configuration moved to Settings app -->
    <menuitem id="menu_ops_configuration"
              name="OPS Matrix Configuration"
              parent="base.menu_administration"
              sequence="50"
              groups="base.group_system"/>
</odoo>
