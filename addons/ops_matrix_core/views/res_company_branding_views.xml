<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_company_form_branding" model="ir.ui.view">
    <field name="name">res.company.form.branding</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='general_info']" position="after">
        <page string="OPS Branding" name="ops_branding">
          <group>
            <group string="Report Appearance">
              <field name="ops_primary_color" widget="color"/>
              <field name="ops_show_external_badge"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
