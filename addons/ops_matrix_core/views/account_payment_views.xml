<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Account Payment Form: Add Branch/BU fields (C-1 Audit Fix) -->
  <record id="view_account_payment_form_ops" model="ir.ui.view">
    <field name="name">account.payment.form.ops.matrix</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='journal_id']" position="after">
        <field name="ops_branch_id"/>
        <field name="ops_business_unit_id"/>
      </xpath>
    </field>
  </record>

  <!-- Account Payment List: Add Branch column (C-1 Audit Fix) -->
  <record id="view_account_payment_tree_ops" model="ir.ui.view">
    <field name="name">account.payment.tree.ops.matrix</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='journal_id']" position="after">
        <field name="ops_branch_id" optional="show"/>
      </xpath>
    </field>
  </record>

</odoo>
