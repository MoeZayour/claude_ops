<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================
         OPS MATRIX DASHBOARD MENUS - CORPORATE STRUCTURE

         This file defines dashboard-related menus that integrate with
         the corporate menu structure defined in ops_menus.xml.

         Key Structure:
         - Dashboards are under Reporting > Dashboards
         - Governance items moved to Reporting > Governance
         - Configuration under Settings > OPS Framework
         - Legacy OPS Matrix root is DISABLED
         ================================================================ -->

    <!-- =================== DASHBOARDS (Under Reporting) =================== -->

    <!-- Executive Dashboard -->
    <menuitem id="menu_ops_executive_dashboard"
              name="Executive Dashboard"
              parent="menu_ops_dashboards"
              action="action_ops_executive_dashboard"
              sequence="10"
              groups="base.group_system,ops_matrix_core.group_ops_executive,ops_matrix_core.group_ops_cfo"/>

    <!-- Branch Manager Dashboard -->
    <menuitem id="menu_ops_branch_manager_dashboard"
              name="Branch Performance"
              parent="menu_ops_dashboards"
              action="action_ops_branch_manager_dashboard"
              sequence="20"
              groups="ops_matrix_core.group_ops_branch_manager,ops_matrix_core.group_ops_bu_leader,ops_matrix_core.group_ops_manager,base.group_system"/>

    <!-- BU Leader Dashboard -->
    <menuitem id="menu_ops_bu_leader_dashboard"
              name="BU Performance"
              parent="menu_ops_dashboards"
              action="action_ops_bu_leader_dashboard"
              sequence="30"
              groups="ops_matrix_core.group_ops_bu_leader,ops_matrix_core.group_ops_executive,ops_matrix_core.group_ops_cfo,base.group_system"/>

    <!-- Sales Performance Dashboard -->
    <menuitem id="menu_ops_sales_dashboard"
              name="Sales Performance"
              parent="menu_ops_dashboards"
              action="action_ops_sales_dashboard"
              sequence="40"
              groups="base.group_system,ops_matrix_core.group_ops_manager,sales_team.group_sale_manager"/>

    <!-- =================== GOVERNANCE (Under Reporting) =================== -->

    <!-- Governance Rules -->
    <menuitem id="menu_ops_governance_rules_report"
              name="Governance Rules"
              parent="menu_ops_governance_root"
              action="action_ops_governance_rule"
              groups="base.group_system,ops_matrix_core.group_ops_manager"
              sequence="10"/>

    <!-- Approval Requests -->
    <menuitem id="menu_ops_approval_request"
              name="Approval Requests"
              parent="menu_ops_governance_root"
              action="action_ops_approval_request"
              groups="base.group_system,ops_matrix_core.group_ops_manager"
              sequence="20"/>

    <!-- SLA Instances -->
    <menuitem id="menu_ops_sla_instance_report"
              name="SLA Tracking"
              parent="menu_ops_governance_root"
              action="action_ops_sla_instance"
              groups="base.group_system,ops_matrix_core.group_ops_manager"
              sequence="30"/>

    <!-- Governance Violation Report -->
    <menuitem id="menu_ops_governance_violation_report"
              name="Violations Report"
              parent="menu_ops_governance_root"
              action="action_ops_governance_violation_report"
              sequence="40"
              groups="ops_matrix_core.group_ops_matrix_administrator,base.group_system"/>

    <!-- =================== OTHER MENUS (Native App Integration) =================== -->

    <!-- Analytic Setup (under Accounting Configuration) -->
    <menuitem id="menu_ops_analytic_setup"
              name="Matrix Analytic Setup"
              parent="account.menu_finance_configuration"
              action="action_ops_analytic_setup"
              sequence="100"
              groups="account.group_account_manager"/>

    <!-- Inter-Branch Transfers (under Inventory) -->
    <menuitem id="menu_ops_inter_branch_transfer"
              name="Inter-Branch Transfers"
              parent="stock.menu_stock_root"
              action="action_ops_inter_branch_transfer"
              sequence="30"
              groups="ops_matrix_core.group_ops_user"/>

    <!--
         Product Requests Menu REMOVED from top-level Inventory.
         Access is now exclusively via: Inventory → Products → Request Product
         (See: ops_product_request_views.xml → menu_request_product_quick)
    -->

</odoo>
