<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =====================================================
         OPS Approval Rule Views
         ===================================================== -->

    <!-- Approval Rule: Form View -->
    <record id="view_ops_approval_rule_form" model="ir.ui.view">
        <field name="name">ops.approval.rule.form</field>
        <field name="model">ops.approval.rule</field>
        <field name="arch" type="xml">
            <form string="Approval Rule">
                <header>
                    <button name="action_view_approvals"
                            type="object"
                            string="View Approvals"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_approvals"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle">
                            <field name="approval_count" widget="statinfo" string="Approvals"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Rule Name"/>
                        </h1>
                        <h4>
                            <field name="code" readonly="1"/>
                        </h4>
                    </div>
                    <group name="outer_group_1">
                        <group name="configuration" string="Configuration">
                            <field name="model_id" options="{'no_create': True}"/>
                            <field name="model_name" invisible="1"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="linked_rule" string="Linked Rule">
                            <field name="governance_rule_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Conditions" name="conditions">
                            <group name="outer_group_4">
                                <field name="condition_domain" placeholder="[('amount_total', '>', 10000)]"/>
                                <field name="condition_code" placeholder="record.amount_total > 10000"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Condition Syntax:</strong>
                                <ul>
                                    <li><strong>Domain:</strong> Standard Odoo domain syntax, e.g., <code>[('amount_total', '>', 10000)]</code></li>
                                    <li><strong>Python:</strong> Python expression returning True/False. Variables: <code>record</code>, <code>user</code>, <code>env</code></li>
                                </ul>
                            </div>
                        </page>
                        <page string="Approvers" name="approvers">
                            <group name="outer_group_5">
                                <field name="approver_user_ids" widget="many2many_tags"/>
                                <field name="approver_persona_ids" widget="many2many_tags"/>
                                <field name="approver_group_ids" widget="many2many_tags"/>
                            </group>
                            <div class="alert alert-warning" role="alert">
                                <strong>Note:</strong> At least one approver must be configured (user, persona, or group).
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Approval Rule: Tree View -->
    <record id="view_ops_approval_rule_tree" model="ir.ui.view">
        <field name="name">ops.approval.rule.tree</field>
        <field name="model">ops.approval.rule</field>
        <field name="arch" type="xml">
            <list string="Approval Rules">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="model_id"/>
                <field name="approval_count"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Approval Rule: Search View -->
    <record id="view_ops_approval_rule_search" model="ir.ui.view">
        <field name="name">ops.approval.rule.search</field>
        <field name="model">ops.approval.rule</field>
        <field name="arch" type="xml">
            <search string="Search Approval Rules">
                <field name="name"/>
                <field name="code"/>
                <field name="model_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Model" name="group_model" context="{'group_by': 'model_id'}"/>
                <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
            </search>
        </field>
    </record>

    <!-- Approval Rule: Action -->
    <record id="action_ops_approval_rule" model="ir.actions.act_window">
        <field name="name">Approval Rules</field>
        <field name="res_model">ops.approval.rule</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ops_approval_rule_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Approval Rule
            </p>
            <p>
                Approval Rules define conditions that trigger approval workflows.
                Configure the model, conditions, and approvers for each rule.
            </p>
        </field>
    </record>

    <!-- Menu Item (under Governance) -->
    <menuitem id="menu_ops_approval_rule"
              name="Approval Rules"
              parent="ops_matrix_core.menu_ops_governance_root"
              action="action_ops_approval_rule"
              sequence="15"
                  groups="ops_matrix_core.group_ops_admin_power,ops_matrix_core.group_ops_finance_manager,ops_matrix_core.group_ops_manager"/>

</odoo>
