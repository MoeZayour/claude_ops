<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ===============================================================
         Segregation of Duties (SoD) Views
         Provides admin UI for rule management and violation audit trail
         =============================================================== -->
    
    <!-- ====== ACTIONS ====== -->
    
    <!-- Action: SoD Rules List -->
    <record id="action_ops_sod_rules" model="ir.actions.act_window">
        <field name="name">Segregation of Duties Rules</field>
        <field name="res_model">ops.segregation.of.duties</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="help">Define Segregation of Duties rules to prevent same user from creating and confirming transactions. Rules are disabled by default - enable as needed.</field>
    </record>
    
    <!-- Action: SoD Violation Log -->
    <record id="action_ops_sod_violations" model="ir.actions.act_window">
        <field name="name">SoD Violation Log</field>
        <field name="res_model">ops.segregation.of.duties.log</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="help">Audit trail of all segregation of duties violations detected. Use for compliance reporting.</field>
    </record>
    
    <!-- ====== TREE VIEWS ====== -->
    
    <!-- Tree View: SoD Rules -->
    <record id="view_ops_sod_rule_tree" model="ir.ui.view">
        <field name="name">ops.segregation.of.duties.tree</field>
        <field name="model">ops.segregation.of.duties</field>
        <field name="arch" type="xml">
            <list decoration-success="enabled" decoration-muted="not enabled">
                <field name="enabled" widget="boolean_toggle" string="Enforced"/>
                <field name="name"/>
                <field name="model_name"/>
                <field name="action_1"/>
                <field name="action_2"/>
                <field name="threshold_amount"/>
                <field name="block_violation" widget="boolean"/>
                <field name="company_id"/>
                <field name="violation_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Tree View: SoD Violation Log -->
    <record id="view_ops_sod_log_tree" model="ir.ui.view">
        <field name="name">ops.segregation.of.duties.log.tree</field>
        <field name="model">ops.segregation.of.duties.log</field>
        <field name="arch" type="xml">
            <list decoration-danger="blocked==True">
                <field name="timestamp"/>
                <field name="rule_id"/>
                <field name="user_id"/>
                <field name="action_1_user_id"/>
                <field name="action_attempted"/>
                <field name="document_reference"/>
                <field name="blocked" widget="boolean"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>
    
    <!-- ====== FORM VIEWS ====== -->
    
    <!-- Form View: SoD Rule -->
    <record id="view_ops_sod_rule_form" model="ir.ui.view">
        <field name="name">ops.segregation.of.duties.form</field>
        <field name="model">ops.segregation.of.duties</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="enabled" widget="boolean_toggle" nolabel="1"/>
                    <field name="active" widget="boolean_toggle" options='{"terminology": "archive"}'/>
                </header>

                <sheet>
                    <div class="alert alert-info" role="alert">
                        <strong>Segregation of Duties:</strong> This rule prevents a single user from performing multiple critical actions on the same document.
                    </div>

                    <group name="outer_group_1">
                        <group name="outer_group_2">
                            <field name="name"/>
                            <field name="is_system_rule" widget="boolean"/>
                        </group>
                        <group name="outer_group_3">
                            <field name="company_id" readonly="is_system_rule == True"/>
                            <field name="violation_count" widget="integer"/>
                        </group>
                    </group>
                    
                    <group name="outer_group_4" colspan="4">
                        <group name="outer_group_5">
                            <field name="model_name"/>
                            <field name="threshold_amount" widget="float"/>
                        </group>
                        <group name="outer_group_6">
                            <field name="action_1"/>
                            <field name="action_2"/>
                        </group>
                    </group>
                    
                    <group name="outer_group_7" colspan="4">
                        <field name="block_violation" widget="boolean"/>
                        <div class="alert alert-warning" invisible="block_violation == True">
                            <strong>Note:</strong> This rule will only be logged, not enforced. User can perform the action.
                        </div>
                    </group>
                    
                    <group name="outer_group_8" colspan="4">
                        <field name="description" nolabel="1" colspan="4"/>
                    </group>
                    
                    <group name="outer_group_9" colspan="4">
                        <field name="created_date" readonly="1"/>
                    </group>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Form View: SoD Violation Log -->
    <record id="view_ops_sod_log_form" model="ir.ui.view">
        <field name="name">ops.segregation.of.duties.log.form</field>
        <field name="model">ops.segregation.of.duties.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="alert alert-danger" role="alert" invisible="blocked == False">
                        <strong><i class="fa fa-exclamation-triangle"/> VIOLATION BLOCKED:</strong> This segregation of duties violation was blocked and prevented from execution.
                    </div>

                    <div class="alert alert-warning" role="alert" invisible="blocked == True">
                        <strong><i class="fa fa-info-circle"/> VIOLATION LOGGED:</strong> This segregation of duties violation was detected and logged but not blocked.
                    </div>
                    
                    <group name="outer_group_10">
                        <group name="outer_group_11">
                            <field name="timestamp" readonly="1"/>
                            <field name="rule_id" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group name="outer_group_12">
                            <field name="blocked" widget="boolean" readonly="1"/>
                            <field name="document_reference" readonly="1"/>
                        </group>
                    </group>
                    
                    <group name="outer_group_13" colspan="4">
                        <group name="outer_group_14">
                            <field name="user_id" readonly="1"/>
                            <field name="action_attempted" readonly="1"/>
                        </group>
                        <group name="outer_group_15">
                            <field name="action_1_user_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group name="outer_group_16" colspan="4">
                        <group name="outer_group_17">
                            <field name="model_name" readonly="1"/>
                            <field name="res_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group name="outer_group_18" colspan="4">
                        <field name="notes" nolabel="1" colspan="4" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ====== SEARCH VIEWS ====== -->
    
    <!-- Search View: SoD Rules -->
    <record id="view_ops_sod_rule_search" model="ir.ui.view">
        <field name="name">ops.segregation.of.duties.search</field>
        <field name="model">ops.segregation.of.duties</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Rule Name"/>
                <field name="model_name" string="Document Type"/>
                <field name="action_1" string="First Action"/>
                <field name="action_2" string="Blocked Action"/>
                <field name="company_id" string="Company"/>
                
                <separator/>

                <filter name="filter_enabled" string="Enabled (Enforced)" domain="[('enabled', '=', True)]"/>
                <filter name="filter_disabled" string="Disabled (Catalog Only)" domain="[('enabled', '=', False)]"/>

                <separator/>

                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Archived" domain="[('active', '=', False)]"/>

                <separator/>
                
                <filter name="filter_system_rules" string="System Rules" domain="[('is_system_rule', '=', True)]"/>
                <filter name="filter_custom_rules" string="Custom Rules" domain="[('is_system_rule', '=', False)]"/>
                
                <separator/>
                
                <filter name="filter_blocking" string="Blocking Rules" domain="[('block_violation', '=', True)]"/>
                <filter name="filter_logging" string="Logging Only" domain="[('block_violation', '=', False)]"/>
                
                <group name="outer_group_19">
                    <filter name="groupby_model" string="Document Type" context="{'group_by': 'model_name'}"/>
                    <filter name="groupby_active" string="Active Status" context="{'group_by': 'active'}"/>
                    <filter name="groupby_company" string="Company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Search View: SoD Violation Log -->
    <record id="view_ops_sod_log_search" model="ir.ui.view">
        <field name="name">ops.segregation.of.duties.log.search</field>
        <field name="model">ops.segregation.of.duties.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="timestamp" string="Date"/>
                <field name="user_id" string="Violating User"/>
                <field name="rule_id" string="Rule"/>
                <field name="document_reference" string="Document"/>
                <field name="company_id" string="Company"/>
                
                <separator/>
                
                <filter name="filter_blocked" string="Blocked Violations" domain="[('blocked', '=', True)]"/>
                <filter name="filter_logged" string="Logged Only" domain="[('blocked', '=', False)]"/>
                
                <group name="outer_group_20">
                    <filter name="groupby_user" string="Violating User" context="{'group_by': 'user_id'}"/>
                    <filter name="groupby_rule" string="Rule" context="{'group_by': 'rule_id'}"/>
                    <filter name="groupby_blocked" string="Blocked Status" context="{'group_by': 'blocked'}"/>
                    <filter name="groupby_company" string="Company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- ====== MENUS ====== -->
    
    <!-- Menu: Segregation of Duties (under Operations > Configuration) -->
    <menuitem id="menu_ops_sod_root" 
              name="Segregation of Duties"
              parent="ops_matrix_core.menu_ops_configuration"
              groups="base.group_system,ops_matrix_core.group_ops_admin_power"
              sequence="50"/>
    
    <menuitem id="menu_ops_sod_rules"
              name="SoD Rules"
              action="action_ops_sod_rules"
              parent="menu_ops_sod_root"
              groups="base.group_system,ops_matrix_core.group_ops_admin_power"
              sequence="10"/>
    
    <menuitem id="menu_ops_sod_violations"
              name="Violation Log"
              action="action_ops_sod_violations"
              parent="menu_ops_sod_root"
              groups="base.group_system,ops_matrix_core.group_ops_admin_power"
              sequence="20"/>
    
</odoo>
