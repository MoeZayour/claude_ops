<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- IP Whitelist Tree View -->
    <record id="view_ops_ip_whitelist_tree" model="ir.ui.view">
        <field name="name">ops.ip.whitelist.tree</field>
        <field name="model">ops.ip.whitelist</field>
        <field name="arch" type="xml">
            <list string="IP Access Rules" decoration-danger="rule_type=='deny'" decoration-success="rule_type=='allow'" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="rule_type"/>
                <field name="ip_address"/>
                <field name="apply_to"/>
                <field name="active"/>
                <field name="blocked_count"/>
                <field name="allowed_count"/>
                <field name="last_triggered"/>
            </list>
        </field>
    </record>

    <!-- IP Whitelist Form View -->
    <record id="view_ops_ip_whitelist_form" model="ir.ui.view">
        <field name="name">ops.ip.whitelist.form</field>
        <field name="model">ops.ip.whitelist</field>
        <field name="arch" type="xml">
            <form string="IP Access Rule">
                <header>
                    <button name="action_test_ip" string="Test Rule" type="object" class="oe_highlight"/>
                    <field name="active" widget="boolean_button" options="{'terminology': 'active'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_blocked_attempts" type="object" class="oe_stat_button" icon="fa-ban">
                            <field name="blocked_count" widget="statinfo" string="Blocked"/>
                        </button>
                        <button type="object" class="oe_stat_button" icon="fa-check">
                            <field name="allowed_count" widget="statinfo" string="Allowed"/>
                        </button>
                    </div>
                    <group>
                        <group name="basic">
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="rule_type" widget="radio"/>
                        </group>
                        <group name="target">
                            <field name="ip_address" placeholder="e.g., 192.168.1.0/24"/>
                            <field name="last_triggered" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="apply_to" widget="radio"/>
                        <field name="user_ids" widget="many2many_tags" invisible="apply_to != 'users'" required="apply_to == 'users'"/>
                        <field name="group_ids" widget="many2many_tags" invisible="apply_to != 'groups'" required="apply_to == 'groups'"/>
                    </group>
                    <group>
                        <field name="description" nolabel="1" placeholder="Purpose and details of this rule..."/>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="created_by_user_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- IP Whitelist Search View -->
    <record id="view_ops_ip_whitelist_search" model="ir.ui.view">
        <field name="name">ops.ip.whitelist.search</field>
        <field name="model">ops.ip.whitelist</field>
        <field name="arch" type="xml">
            <search string="IP Rules">
                <field name="name"/>
                <field name="ip_address"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <filter name="allow" string="Allow Rules" domain="[('rule_type', '=', 'allow')]"/>
                <filter name="deny" string="Deny Rules" domain="[('rule_type', '=', 'deny')]"/>
                <separator/>
                <group>
                    <filter name="group_type" string="Rule Type" context="{'group_by': 'rule_type'}"/>
                    <filter name="group_apply_to" string="Apply To" context="{'group_by': 'apply_to'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- IP Whitelist Action -->
    <record id="action_ops_ip_whitelist" model="ir.actions.act_window">
        <field name="name">IP Access Control</field>
        <field name="res_model">ops.ip.whitelist</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first IP access rule
            </p>
            <p>
                Control access based on IP addresses or ranges (CIDR notation).
                Rules are evaluated in sequence order - first match wins.
            </p>
        </field>
    </record>

    <!-- IP Test Wizard Form View -->
    <record id="view_ops_ip_test_wizard_form" model="ir.ui.view">
        <field name="name">ops.ip.test.wizard.form</field>
        <field name="model">ops.ip.test.wizard</field>
        <field name="arch" type="xml">
            <form string="Test IP Rule">
                <group>
                    <field name="rule_id" invisible="1"/>
                    <field name="test_ip" placeholder="e.g., 192.168.1.100"/>
                    <field name="user_id"/>
                </group>
                <group invisible="not result">
                    <field name="result" nolabel="1" readonly="1" widget="text"/>
                </group>
                <footer>
                    <button string="Test" name="action_test" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ops_ip_whitelist"
              name="IP Access Control"
              parent="menu_ops_settings_root"
              action="action_ops_ip_whitelist"
              sequence="46"
              groups="base.group_system"/>
</odoo>
