<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Product Request Tree View -->
    <record id="view_ops_product_request_tree" model="ir.ui.view">
        <field name="name">ops.product.request.tree</field>
        <field name="model">ops.product.request</field>
        <field name="arch" type="xml">
             <list decoration-info="state=='draft'" 
                  decoration-warning="state=='submitted'"
                  decoration-success="state in ('approved','created')">
                <field name="name"/>
                <field name="product_sku"/>
                <field name="product_name"/>
                <field name="requester_id"/>
                <field name="branch_id"/>
                <field name="request_date"/>
                <field name="state"/>
             </list>
        </field>
    </record>
    
    <!-- Product Request Form View -->
    <record id="view_ops_product_request_form" model="ir.ui.view">
        <field name="name">ops.product.request.form</field>
        <field name="model">ops.product.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit for Approval" 
                            type="object" invisible="state != 'draft'" 
                            class="oe_highlight"/>
                    <button name="action_approve" string="Approve" 
                            type="object" invisible="state != 'submitted'" 
                            class="oe_highlight"
                            groups="ops_matrix_core.group_ops_product_manager"/>
                    <button name="action_reject" string="Reject" 
                            type="object" invisible="state != 'submitted'"
                            groups="ops_matrix_core.group_ops_product_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(product.product_template_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-cube"
                                context="{'active_id': product_id}"
                                invisible="not product_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View Product</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="requester_id" readonly="1"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="request_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="approver_id" readonly="1" 
                                   invisible="state in ['draft', 'submitted']"/>
                            <field name="approval_date" readonly="1"
                                   invisible="state in ['draft', 'submitted']"/>
                            <field name="product_id" readonly="1"
                                   invisible="state != 'created'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Product Information">
                            <group>
                                <group>
                                    <field name="product_sku"/>
                                    <field name="product_name"/>
                                    <field name="categ_id"/>
                                </group>
                                <group>
                                    <field name="expected_price"/>
                                    <field name="expected_cost"/>
                                </group>
                            </group>
                            <group>
                                <field name="product_description" 
                                       placeholder="Detailed product description..."/>
                            </group>
                        </page>
                        
                        <page string="Business Justification">
                            <group>
                                <field name="justification" 
                                       placeholder="Explain why this product is needed, target market, expected sales volume, etc."
                                       nolabel="1"/>
                            </group>
                            <group>
                                <field name="supplier_info"
                                       placeholder="List potential suppliers, contact information, pricing quotes..."
                                       nolabel="1"/>
                            </group>
                        </page>
                        
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        
                        <page string="Approval" 
                              invisible="state == 'draft'">
                            <group invisible="state != 'rejected'">
                                <field name="rejection_reason" nolabel="1"
                                       placeholder="Reason for rejection..."/>
                            </group>
                            <group>
                                <field name="notes" nolabel="1"
                                       placeholder="Additional notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Product Request Action -->
    <record id="action_ops_product_request" model="ir.actions.act_window">
        <field name="name">Product Requests</field>
        <field name="res_model">ops.product.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Product Request
            </p>
            <p>
                Request to add new products to the system.
            </p>
        </field>
    </record>
    
    <!-- Menu under Sales â†’ Products -->
    <menuitem id="menu_ops_product_request"
              name="Product Requests"
              parent="sale.prod_config_main"
              action="action_ops_product_request"
              sequence="15"/>
    
</odoo>
