<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- ============================================================ -->
        <!-- API KEY TREE VIEW -->
        <!-- ============================================================ -->
        
        <record id="view_ops_api_key_tree" model="ir.ui.view">
            <field name="name">ops.api.key.tree</field>
            <field name="model">ops.api.key</field>
            <field name="arch" type="xml">
                <list string="API Keys" decoration-muted="not active">
                    <field name="name"/>
                    <field name="persona_id"/>
                    <field name="key" password="True"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="created_date"/>
                    <field name="last_used"/>
                    <field name="usage_count"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>
        
        <!-- ============================================================ -->
        <!-- API KEY FORM VIEW -->
        <!-- ============================================================ -->
        
        <record id="view_ops_api_key_form" model="ir.ui.view">
            <field name="name">ops.api.key.form</field>
            <field name="model">ops.api.key</field>
            <field name="arch" type="xml">
                <form string="API Key">
                    <header>
                        <button name="regenerate_key"
                                type="object"
                                string="Regenerate Key"
                                icon="fa-refresh"
                                class="btn-warning"
                                groups="base.group_system"
                                invisible="not active"/>
                        <button name="action_deactivate"
                                type="object"
                                string="Deactivate"
                                icon="fa-ban"
                                class="btn-secondary"
                                invisible="not active"/>
                        <button name="action_activate"
                                type="object"
                                string="Activate"
                                icon="fa-check"
                                class="btn-primary"
                                invisible="active"/>
                        <button name="action_view_audit_logs"
                                type="object"
                                string="View Audit Logs"
                                icon="fa-history"
                                class="btn-secondary"/>
                        <field name="active" widget="boolean_button" options="{'terminology': 'active'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_audit_logs" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-history">
                                <field name="usage_count" widget="statinfo" string="API Calls"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" invisible="active"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g., Production Integration"/>
                            </h1>
                        </div>
                        
                        <group col="4">
                            <group colspan="2">
                                <field name="persona_id"
                                       options="{'no_create': True, 'no_open': True}"
                                       required="1"/>
                                <field name="company_id"
                                       groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </group>
                            <group colspan="2">
                                <field name="created_date" readonly="1"/>
                                <field name="last_used" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="key" 
                                   password="True" 
                                   readonly="1" 
                                   widget="CopyClipboardChar"/>
                            <div class="alert alert-warning" role="alert">
                                <strong>Security Notice:</strong> This API key provides full access based on the linked persona's permissions. 
                                Store it securely and never commit it to version control. 
                                If compromised, use the "Regenerate Key" button immediately.
                            </div>
                        </group>
                        
                        <group>
                            <field name="description" 
                                   placeholder="Document the purpose of this API key and which system/application uses it..."
                                   nolabel="1"/>
                        </group>
                        
                        <group>
                            <group>
                                <field name="usage_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="last_used" readonly="1"/>
                            </group>
                        </group>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- ============================================================ -->
        <!-- API KEY SEARCH VIEW -->
        <!-- ============================================================ -->
        
        <record id="view_ops_api_key_search" model="ir.ui.view">
            <field name="name">ops.api.key.search</field>
            <field name="model">ops.api.key</field>
            <field name="arch" type="xml">
                <search string="Search API Keys">
                    <field name="name"/>
                    <field name="persona_id"/>
                    <field name="key"/>
                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="filter_inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Recently Used (Last 7 Days)"
                            name="filter_recent"
                            domain="[('last_used', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Never Used"
                            name="filter_never_used"
                            domain="[('last_used', '=', False)]"/>
                    <separator/>
                    <filter string="High Usage (&gt;1000)"
                            name="filter_high_usage"
                            domain="[('usage_count', '&gt;', 1000)]"/>
                    <group>
                        <filter string="Persona" name="group_persona" context="{'group_by': 'persona_id'}"/>
                        <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                        <filter string="Created Date" name="group_created" context="{'group_by': 'created_date'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- ============================================================ -->
        <!-- API KEY KANBAN VIEW -->
        <!-- ============================================================ -->
        
        <record id="view_ops_api_key_kanban" model="ir.ui.view">
            <field name="name">ops.api.key.kanban</field>
            <field name="model">ops.api.key</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="persona_id"/>
                    <field name="active"/>
                    <field name="usage_count"/>
                    <field name="last_used"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.active.raw_value ? '' : 'o_kanban_record_inactive'}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <field name="active" widget="boolean_toggle"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="persona_id"/>
                                    <div class="text-muted">
                                        <i class="fa fa-clock-o"/> Last used: 
                                        <field name="last_used" widget="relative"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-bar-chart"/> Usage: 
                                        <field name="usage_count"/> calls
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- ============================================================ -->
        <!-- API KEY ACTION -->
        <!-- ============================================================ -->
        
        <record id="action_ops_api_key" model="ir.actions.act_window">
            <field name="name">API Keys</field>
            <field name="res_model">ops.api.key</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first API Key
                </p>
                <p>
                    API Keys provide secure access to the OPS Matrix API for external integrations.
                    Each key is linked to a Persona which determines access rights and data visibility.
                </p>
            </field>
        </record>
        
        
        
    </data>
</odoo>
