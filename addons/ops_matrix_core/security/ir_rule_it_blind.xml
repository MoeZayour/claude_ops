<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- IT Admin Blindness Rules (P01) -->
        <!-- These rules are global and use a domain that is always True for non-IT-admins, 
             but False for IT-admins on sensitive models. -->

        <!-- Sale Orders -->
        <record id="rule_it_admin_blind_sale_order" model="ir.rule">
            <field name="name">IT Admin Blind: Sale Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(user.has_group('ops_matrix_core.group_ops_it_admin'), '=', False)]</field>
        </record>

