<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ops_purchase_order_import_wizard_form" model="ir.ui.view">
        <field name="name">ops.purchase.order.import.wizard.form</field>
        <field name="model">ops.purchase.order.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Purchase Order Lines from Excel">
                <group invisible="1" name="hidden_fields">
                    <field name="state"/>
                    <field name="template_file"/>
                    <field name="template_filename"/>
                </group>

                <group invisible="state != 'upload'" name="upload_state">
                    <group name="outer_group_1">
                        <field name="purchase_order_id" readonly="1"/>
                    </group>
                    <group name="outer_group_2">
                        <label for="template_file" string="Need a template?"/>
                        <div>
                            <button name="action_download_template" 
                                    string="Download Excel Template" 
                                    type="object" 
                                    icon="fa-download"
                                    class="btn-link"/>
                        </div>
                    </group>
                    <separator string="Upload Your Excel File"/>
                    <group name="outer_group_3" colspan="2">
                        <field name="import_file" filename="import_filename" widget="binary" required="1"/>
                        <field name="import_filename" invisible="1"/>
                    </group>
                </group>
                
                <group invisible="state != 'validate'" colspan="2" name="validate_state">
                    <field name="validation_message" nolabel="1" widget="html" colspan="2"/>
                </group>

                <group invisible="state != 'done'" colspan="2" name="done_state">
                    <div class="alert alert-success m-3" role="alert">
                        <h3><i class="fa fa-check-circle"/> Import Successful!</h3>
                        <p>Successfully imported <field name="lines_imported" readonly="1"/> line(s) to purchase order.</p>
                    </div>
                </group>
                
                <footer>
                    <button name="action_validate_import" string="Validate File" type="object" class="btn-primary" invisible="state != 'upload'"/>
                    <button name="action_import_lines" string="Import Lines" type="object" class="btn-primary" invisible="state != 'validate'"/>
                    <button name="action_close" string="Close" type="object" class="btn-primary" invisible="state != 'done'"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_ops_purchase_order_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Purchase Order Lines from Excel</field>
        <field name="res_model">ops.purchase.order.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_purchase_order_id': active_id}</field>
    </record>
    
    <record id="view_purchase_order_form_import_button" model="ir.ui.view">
        <field name="name">purchase.order.form.import.button</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="%(action_ops_purchase_order_import_wizard)d" 
                        type="action" 
                        string="Import from Excel" 
                        icon="fa-file-excel-o"
                        class="btn-secondary"
                        invisible="state not in ['draft', 'sent']"/>
            </xpath>
        </field>
    </record>
</odoo>
