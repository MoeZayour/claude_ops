<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_ops_sale_order_import_wizard_form" model="ir.ui.view">
        <field name="name">ops.sale.order.import.wizard.form</field>
        <field name="model">ops.sale.order.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Sale Order Lines from Excel">
                <group invisible="1" name="hidden_fields">
                    <field name="state"/>
                    <field name="template_file"/>
                    <field name="template_filename"/>
                </group>

                <!-- Upload State -->
                <group name="outer_group_1" invisible="state != 'upload'">
                    <group name="outer_group_2">
                        <field name="sale_order_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group name="outer_group_3">
                        <label for="template_file" string="Need a template?"/>
                        <div>
                            <button name="action_download_template" 
                                    string="Download Excel Template" 
                                    type="object" 
                                    icon="fa-download"
                                    class="btn-link"
                                    help="Download a pre-formatted Excel template with instructions"/>
                        </div>
                    </group>
                    
                    <separator string="Upload Your Excel File"/>
                    <group name="outer_group_4" colspan="2">
                        <field name="import_file" filename="import_filename" widget="binary" required="1"/>
                        <field name="import_filename" invisible="1"/>
                    </group>
                    
                    <div class="alert alert-info" role="alert" colspan="2">
                        <h4><i class="fa fa-info-circle"/> Instructions:</h4>
                        <ol class="ms-3 mt-2">
                            <li>Click "Download Excel Template" above to get the template</li>
                            <li>Open the template and fill in the "Import Data" sheet with your product codes and quantities</li>
                            <li>Product codes must match existing products in the system exactly</li>
                            <li>Save the Excel file on your computer</li>
                            <li>Upload the completed file using the field above</li>
                            <li>Click "Validate File" to check for any errors</li>
                        </ol>
                        <p class="mt-2"><strong>Note:</strong> Leave "Unit Price" blank to use the product's default price.</p>
                    </div>
                </group>
                
                <!-- Validation State -->
                <group name="outer_group_5" invisible="state != 'validate'" colspan="2">
                    <field name="validation_message" nolabel="1" widget="html" colspan="2"/>
                </group>
                
                <!-- Done State -->
                <group invisible="state != 'done'" colspan="2" name="done_state">
                    <div class="alert alert-success m-3" role="alert">
                        <h3 class="mt-0"><i class="fa fa-check-circle"/> Import Successful!</h3>
                        <p class="fs-5">Successfully imported <field name="lines_imported" readonly="1" class="fw-bold"/> line(s) to sale order <strong><field name="sale_order_id" readonly="1" options="{'no_create': True, 'no_open': True}"/></strong>.</p>
                        <p class="mt-3">You can now review the imported lines in your sale order.</p>
                    </div>
                </group>
                
                <footer>
                    <button name="action_validate_import" 
                            string="Validate File" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'upload'"
                            data-hotkey="v"
                            help="Check the Excel file for errors before importing"/>
                    
                    <button name="action_import_lines" 
                            string="Import Lines" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'validate'"
                            data-hotkey="i"
                            help="Add the validated lines to your sale order"/>
                    
                    <button name="action_close" 
                            string="Close and View Order" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'done'"
                            data-hotkey="c"/>
                    
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action to open the wizard -->
    <record id="action_ops_sale_order_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Sale Order Lines from Excel</field>
        <field name="res_model">ops.sale.order.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_sale_order_id': active_id}</field>
    </record>
    
    <!-- Add Import button to Sale Order form -->
    <record id="view_order_form_import_button" model="ir.ui.view">
        <field name="name">sale.order.form.import.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="%(action_ops_sale_order_import_wizard)d" 
                        type="action" 
                        string="Import from Excel" 
                        icon="fa-file-excel-o"
                        class="btn-secondary"
                        invisible="state not in ['draft', 'sent']"
                        help="Import multiple sale order lines from an Excel file"/>
            </xpath>
        </field>
    </record>
    
</odoo>
