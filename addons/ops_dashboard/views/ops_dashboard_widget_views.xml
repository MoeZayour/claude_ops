<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Widget Tree View -->
    <record id="ops_dashboard_widget_view_tree" model="ir.ui.view">
        <field name="name">ops.dashboard.widget.tree</field>
        <field name="model">ops.dashboard.widget</field>
        <field name="arch" type="xml">
            <list string="Widgets" default_order="dashboard_id, sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="dashboard_id"/>
                <field name="widget_type"/>
                <field name="kpi_id"/>
                <field name="width"/>
                <field name="height"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Widget Form View -->
    <record id="ops_dashboard_widget_view_form" model="ir.ui.view">
        <field name="name">ops.dashboard.widget.form</field>
        <field name="model">ops.dashboard.widget</field>
        <field name="arch" type="xml">
            <form string="Widget">
                <sheet>
                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-danger" invisible="active"/>
                    <group name="main_info">
                        <group name="basic_info" string="Basic Info">
                            <field name="name"/>
                            <field name="dashboard_id"/>
                            <field name="widget_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group name="kpi_settings" string="KPI">
                            <field name="kpi_id" invisible="widget_type not in ['kpi', 'metric']"/>
                            <field name="kpi_ids" widget="many2many_tags" invisible="widget_type != 'kpi_group'"/>
                            <field name="period_override"/>
                        </group>
                    </group>
                    <group name="display_settings">
                        <group name="display" string="Display">
                            <field name="title"/>
                            <field name="subtitle"/>
                            <field name="icon"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group name="position" string="Position">
                            <field name="position_x"/>
                            <field name="position_y"/>
                            <field name="width"/>
                            <field name="height"/>
                        </group>
                    </group>
                    <group name="list_config" string="List Configuration" invisible="widget_type != 'list'">
                        <field name="list_model"/>
                        <field name="list_fields"/>
                        <field name="list_domain"/>
                        <field name="list_order"/>
                        <field name="list_limit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Widget Search View -->
    <record id="ops_dashboard_widget_view_search" model="ir.ui.view">
        <field name="name">ops.dashboard.widget.search</field>
        <field name="model">ops.dashboard.widget</field>
        <field name="arch" type="xml">
            <search string="Search Widgets">
                <field name="name"/>
                <field name="dashboard_id"/>
                <field name="kpi_id"/>
                <field name="widget_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="KPI Cards" name="kpi" domain="[('widget_type', '=', 'kpi')]"/>
                <filter string="Charts" name="charts" domain="[('widget_type', 'in', ['bar_chart', 'line_chart', 'pie_chart'])]"/>
                <separator/>
                <filter string="Dashboard" name="group_dashboard" context="{'group_by': 'dashboard_id'}"/>
                <filter string="Type" name="group_type" context="{'group_by': 'widget_type'}"/>
            </search>
        </field>
    </record>

    <!-- Widget Action -->
    <record id="action_ops_dashboard_widget" model="ir.actions.act_window">
        <field name="name">Widgets</field>
        <field name="res_model">ops.dashboard.widget</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
