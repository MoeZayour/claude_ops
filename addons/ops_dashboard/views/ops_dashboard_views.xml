<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Action for Dashboard View - defined first for form view reference -->
    <record id="action_ops_dashboard_client" model="ir.actions.client">
        <field name="name">OPS Analytics</field>
        <field name="tag">ops_dashboard_action</field>
        <field name="target">main</field>
    </record>

    <!-- Dashboard Tree View -->
    <record id="ops_dashboard_view_tree" model="ir.ui.view">
        <field name="name">ops.dashboard.tree</field>
        <field name="model">ops.dashboard</field>
        <field name="arch" type="xml">
            <list string="Dashboards" default_order="sequence, name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="dashboard_type"/>
                <field name="widget_count"/>
                <field name="auto_refresh"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Form View -->
    <record id="ops_dashboard_view_form" model="ir.ui.view">
        <field name="name">ops.dashboard.form</field>
        <field name="model">ops.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_ops_dashboard_client)d" type="action"
                                class="oe_stat_button" icon="fa-tachometer-alt">
                            <span>Open Dashboard</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dashboard Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="dashboard_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="auto_refresh"/>
                            <field name="refresh_interval" invisible="not auto_refresh"/>
                            <field name="columns"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Widgets" name="widgets">
                            <field name="widget_ids">
                                <list string="Widgets" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="widget_type"/>
                                    <field name="kpi_id"/>
                                    <field name="position_x"/>
                                    <field name="position_y"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Access Control" name="access">
                            <group>
                                <group string="Target Personas">
                                    <field name="persona_ids" widget="many2many_tags" nolabel="1"/>
                                </group>
                                <group string="Access Groups">
                                    <field name="group_ids" widget="many2many_tags" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Dashboard description..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Dashboard Search View -->
    <record id="ops_dashboard_view_search" model="ir.ui.view">
        <field name="name">ops.dashboard.search</field>
        <field name="model">ops.dashboard</field>
        <field name="arch" type="xml">
            <search string="Search Dashboards">
                <field name="name"/>
                <field name="code"/>
                <field name="dashboard_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Executive" name="executive" domain="[('dashboard_type', '=', 'executive')]"/>
                <filter string="Sales" name="sales" domain="[('dashboard_type', '=', 'sales')]"/>
                <filter string="Branch" name="branch" domain="[('dashboard_type', '=', 'branch')]"/>
                <separator/>
                <filter string="Type" name="group_type" context="{'group_by': 'dashboard_type'}"/>
                <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
            </search>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_ops_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboards</field>
        <field name="res_model">ops.dashboard</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dashboard
            </p>
            <p>
                Dashboards help you visualize key business metrics at a glance.
            </p>
        </field>
    </record>
</odoo>
