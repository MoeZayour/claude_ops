<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ================================================================
         OPS MATRIX REPORTING - ANALYTICS MENUS

         Consolidated analytics under native Odoo apps.
         Removed separate "OPS Analytics" root menus for cleaner UX.
         ================================================================ -->

    <!-- ==================== ACCOUNTING ANALYTICS ==================== -->
    <!-- Under Accounting > Reporting > Financial Analytics -->
    <menuitem id="menu_ops_financial_analytics"
              name="Financial Analytics (Matrix)"
              parent="account.menu_finance_reports"
              action="action_ops_financial_analysis"
              sequence="100"
              groups="ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_executive"/>

    <!-- ==================== SALES ANALYTICS ==================== -->
    <!-- Under Sales > Reporting > Sales Analytics -->
    <menuitem id="menu_ops_sales_analytics"
              name="Sales Analytics (Matrix)"
              parent="sale.menu_sale_report"
              action="action_ops_sales_analysis"
              sequence="50"
              groups="ops_matrix_core.group_ops_manager,sales_team.group_sale_manager"/>

    <!-- ==================== INVENTORY ANALYTICS ==================== -->
    <!-- Under Inventory > Reporting > Inventory Analytics -->
    <menuitem id="menu_ops_inventory_analytics"
              name="Inventory Analytics (Matrix)"
              parent="stock.menu_warehouse_report"
              action="action_ops_inventory_analysis"
              sequence="50"
              groups="ops_matrix_core.group_ops_manager,stock.group_stock_manager"/>

    <!-- ==================== DISABLE OLD ROOT MENUS ==================== -->
    <!-- These are now consolidated into their respective apps -->
    <menuitem id="menu_ops_accounting_analytics"
              name="OPS Analytics (Disabled)"
              parent="account.menu_finance_reports"
              sequence="999"
              active="False"/>

    <menuitem id="menu_ops_sales_analytics_root"
              name="OPS Analytics (Disabled)"
              parent="sale.sale_menu_root"
              sequence="999"
              active="False"/>

    <menuitem id="menu_ops_inventory_analytics_root"
              name="OPS Analytics (Disabled)"
              parent="stock.menu_stock_root"
              sequence="999"
              active="False"/>

</odoo>
