<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_secure_excel_export_wizard_form" model="ir.ui.view">
        <field name="name">secure.excel.export.wizard.form</field>
        <field name="model">secure.excel.export.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group invisible="state != 'draft'">
                        <group>
                            <field name="model_id"/>
                            <field name="model_name" invisible="1"/>
                            <field name="limit"/>
                        </group>
                        <group>
                            <field name="domain"/>
                        </group>
                    </group>
                    
                    <group invisible="state != 'draft'">
                        <field name="field_ids" widget="many2many_tags" nolabel="1"/>
                    </group>
                    
                    <group invisible="state != 'done'">
                        <field name="file_data" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    
                    <field name="state" invisible="1"/>
                </sheet>
                <footer>
                    <button string="Export" name="action_export" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_secure_excel_export_wizard" model="ir.actions.act_window">
        <field name="name">Secure Excel Export</field>
        <field name="res_model">secure.excel.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Link to OPS Core Reporting Menu -->
    <menuitem id="menu_ops_export_tools"
              name="Export Tools"
              parent="ops_matrix_core.menu_ops_reporting"
              sequence="100"/>
    
    <!-- Menu under Reporting â†’ Export Tools -->
    <menuitem id="menu_secure_excel_export"
              name="Secure Excel Export"
              parent="menu_ops_export_tools"
              action="action_secure_excel_export_wizard"
              sequence="10"/>
    
</odoo>
