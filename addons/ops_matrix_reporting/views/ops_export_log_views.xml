<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ops_export_log_tree" model="ir.ui.view">
        <field name="name">ops.export.log.tree</field>
        <field name="model">ops.export.log</field>
        <field name="arch" type="xml">
            <list string="Export Audit Logs"
                  decoration-info="data_classification == 'internal'"
                  decoration-warning="data_classification == 'confidential'"
                  decoration-danger="data_classification == 'restricted'"
                  create="false" edit="false" delete="false">
                <field name="export_date"/>
                <field name="user_id"/>
                <field name="model_id"/>
                <field name="record_count"/>
                <field name="branch_ids" widget="many2many_tags"/>
                <field name="business_unit_ids" widget="many2many_tags"/>
                <field name="export_format"/>
                <field name="data_classification" widget="badge"
                       decoration-info="data_classification == 'internal'"
                       decoration-warning="data_classification == 'confidential'"
                       decoration-danger="data_classification == 'restricted'"/>
                <field name="ip_address"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ops_export_log_form" model="ir.ui.view">
        <field name="name">ops.export.log.form</field>
        <field name="model">ops.export.log</field>
        <field name="arch" type="xml">
            <form string="Export Audit Log" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="model_id" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="export_date" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="export_format"/>
                            <field name="record_count"/>
                            <field name="data_classification" widget="badge"/>
                        </group>
                        <group>
                            <field name="ip_address"/>
                            <field name="session_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="branch_ids" widget="many2many_tags"/>
                            <field name="business_unit_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="domain_filter" widget="text"/>
                        <field name="notes" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ops_export_log_search" model="ir.ui.view">
        <field name="name">ops.export.log.search</field>
        <field name="model">ops.export.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="model_id"/>
                <field name="branch_ids"/>
                <field name="business_unit_ids"/>
                <field name="export_date"/>
                <filter name="today" string="Today"
                        domain="[('export_day', '=', context_today())]"/>
                <filter name="this_week" string="This Week"
                        domain="[('export_day', '&gt;=', (context_today() - relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="This Month"
                        domain="[('export_day', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="confidential" string="Confidential"
                        domain="[('data_classification', '=', 'confidential')]"/>
                <filter name="restricted" string="Restricted"
                        domain="[('data_classification', '=', 'restricted')]"/>
                <group>
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_model" string="Model" context="{'group_by': 'model_id'}"/>
                    <filter name="group_day" string="Day" context="{'group_by': 'export_day'}"/>
                    <filter name="group_classification" string="Classification" context="{'group_by': 'data_classification'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ops_export_log" model="ir.actions.act_window">
        <field name="name">Export Audit Logs</field>
        <field name="res_model">ops.export.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No export logs yet
            </p>
            <p>
                Export audit logs track all data exports for security and compliance.
                Each export records who exported what data, when, and from where.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ops_export_log"
              name="Export Audit Logs"
              parent="ops_matrix_core.menu_ops_reporting"
              action="action_ops_export_log"
              sequence="100"
              groups="ops_matrix_core.group_ops_manager,ops_matrix_core.group_ops_admin_power"/>
</odoo>
