<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ops_matrix_reporting.OpsDashboard">
        <div class="o_action_manager ops-dashboard-container">
            <div t-if="state.loading" class="o_loading_indicator">
                <i class="fa fa-spinner fa-spin fa-3x"/>
                <p>Loading Dashboard...</p>
            </div>
            <div t-else="" class="container-fluid">
                <div class="row mb-4 mt-2">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <h2 class="ops-dashboard-title"><t t-esc="state.dashboardData.name"/></h2>
                        <button class="btn btn-primary" t-on-click="loadDashboardData">
                            <i class="fa fa-refresh mr-1"/> Refresh
                        </button>
                    </div>
                </div>
                
                <div class="row ops-dashboard-grid">
                    <t t-foreach="state.dashboardData.widgets" t-as="widget" t-key="widget.id">
                        <div t-attf-class="col-md-{{widget.col_span}} mb-4">
                            <div class="ops-dashboard-card h-100" t-on-click="() => this.onWidgetClick(widget)">
                                <div class="ops-dashboard-card-body d-flex flex-column">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="ops-dashboard-icon-box mr-3">
                                            <i t-attf-class="fa {{widget.config.icon or 'fa-bar-chart'}} fa-2x text-primary"/>
                                        </div>
                                        <h5 class="card-title mb-0"><t t-esc="widget.name"/></h5>
                                    </div>
                                    
                                    <div class="ops-dashboard-value-container flex-grow-1 d-flex align-items-center justify-content-center">
                                        <t t-if="widget.type == 'kpi'">
                                            <div class="ops-dashboard-kpi-value">
                                                <t t-esc="widget.value"/>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <div class="text-muted italic">
                                                Visualization coming soon...
                                            </div>
                                        </t>
                                    </div>
                                    
                                    <div t-if="widget.config.description" class="ops-dashboard-footer mt-2 text-muted small">
                                        <t t-esc="widget.config.description"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
