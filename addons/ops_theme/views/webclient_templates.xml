<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ===================================================================== -->
    <!-- OPS THEME v7.0 - Webclient Templates (Minimal)                       -->
    <!-- ===================================================================== -->

    <!-- Add color mode support to main webclient HTML element -->
    <template id="webclient_bootstrap" inherit_id="web.webclient_bootstrap" name="OPS Webclient Bootstrap" priority="99">
        <xpath expr="//html" position="attributes">
            <attribute name="data-color-mode">light</attribute>
        </xpath>
    </template>

</odoo>
