<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ops_theme" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ops.theme</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="OPS Theme" string="OPS Theme" name="ops_theme">
                    <block title="Branding" name="ops_branding_settings">
                        <setting string="Brand Color"
                                 help="Primary color used in reports and external documents">
                            <field name="ops_primary_color" widget="color"/>
                        </setting>
                    </block>
                    <block title="External Documents" name="ops_external_settings">
                        <setting string="Amount in Words"
                                 help="Language for amount in words on invoices, quotations, etc.">
                            <field name="ops_amount_words_lang" widget="radio"/>
                        </setting>
                        <setting string="OPS Framework Badge"
                                 help="Show 'Powered by OPS Framework' badge on external documents"
                                 groups="base.group_system">
                            <field name="ops_show_external_badge"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
