<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_ops_theme" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ops.theme</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="OPS Theme" string="OPS Theme" name="ops_theme" groups="base.group_system">

                    <!-- ============================================================ -->
                    <!-- SECTION 1: BRAND IDENTITY                                    -->
                    <!-- Preset, favicon, primary/secondary, status colors            -->
                    <!-- ============================================================ -->
                    <block title="Brand Identity" name="ops_brand_identity_settings">
                        <div class="text-muted mb-3">
                            Theme preset, favicon, and core brand colors that define your company's visual identity across the platform.
                        </div>

                        <!-- Theme Preset -->
                        <setting string="Theme Preset"
                                 help="Quick-start color scheme. Selecting a preset fills all color fields below. Choose Custom to set your own.">
                            <field name="ops_theme_preset" widget="radio" class="o_light_label"/>
                        </setting>

                        <!-- Action buttons row -->
                        <setting string="Theme Actions"
                                 help="Preview your current theme in a new tab, or reset all colors back to the Corporate Blue defaults.">
                            <div class="d-flex gap-2 mt-2">
                                <button name="action_preview_theme" type="object"
                                        string="Preview Theme" class="btn-secondary"
                                        icon="fa-eye"/>
                                <button name="action_reset_theme_defaults" type="object"
                                        string="Reset Defaults" class="btn-link text-danger"
                                        icon="fa-refresh"
                                        confirm="This will reset all theme colors to Corporate Blue defaults. Continue?"/>
                            </div>
                        </setting>

                        <!-- Favicon -->
                        <setting string="Browser Favicon"
                                 help="Icon shown in browser tabs. Upload a square image, recommended 64x64 pixels.">
                            <field name="ops_favicon" widget="image" class="oe_avatar float-start me-3"
                                   options="{'size': [64, 64]}"/>
                        </setting>

                        <!-- Primary Colors — 2-column -->
                        <div class="ops-color-grid row mt-3">
                            <div class="col-lg-6">
                                <setting string="Primary Color"
                                         help="Used for navbar, headers, and strong interface elements.">
                                    <field name="ops_primary_color" widget="color"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Secondary Color"
                                         help="Used for buttons, links, active states, and accent elements.">
                                    <field name="ops_secondary_color" widget="color"/>
                                </setting>
                            </div>
                        </div>

                        <!-- Status Colors — 2-column -->
                        <div class="ops-color-grid row">
                            <div class="col-lg-6">
                                <setting string="Success Color"
                                         help="Confirmations, approved states, and positive values.">
                                    <field name="ops_success_color" widget="color"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Warning Color"
                                         help="Pending states, attention items, and caution indicators.">
                                    <field name="ops_warning_color" widget="color"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Danger Color"
                                         help="Errors, rejections, and negative values.">
                                    <field name="ops_danger_color" widget="color"/>
                                </setting>
                            </div>
                        </div>
                    </block>

                    <!-- ============================================================ -->
                    <!-- SECTION 2: LOGIN PAGE                                        -->
                    <!-- Background, logo toggle, tagline                             -->
                    <!-- ============================================================ -->
                    <block title="Login Page" name="ops_login_settings">
                        <div class="text-muted mb-3">
                            Customize the split-screen login experience your users see when they sign in.
                        </div>

                        <!-- Show Logo Toggle -->
                        <setting string="Show Company Logo"
                                 help="Display your company logo on the login page branding panel.">
                            <field name="ops_login_show_logo"/>
                        </setting>

                        <!-- Login Background -->
                        <setting string="Background Image"
                                 help="Background image for the branding panel on the login page. Recommended size: 1920x1080 pixels.">
                            <field name="ops_login_background" widget="image" class="w-50"
                                   options="{'size': [320, 180]}"/>
                        </setting>

                        <!-- Tagline -->
                        <setting string="Tagline"
                                 help="Short text displayed below your company name on the login page.">
                            <field name="ops_login_tagline" placeholder="e.g. Enterprise Governance Platform"/>
                        </setting>
                    </block>

                    <!-- ============================================================ -->
                    <!-- SECTION 3: LAYOUT & USER EXPERIENCE                          -->
                    <!-- Navbar, shadows, radius + default user preferences           -->
                    <!-- ============================================================ -->
                    <block title="Layout &amp; User Experience" name="ops_layout_settings">
                        <div class="text-muted mb-3">
                            Interface styling and default preferences applied to new user accounts.
                        </div>

                        <!-- Navbar Style -->
                        <setting string="Navigation Bar Style"
                                 help="Visual style of the top navigation bar across the application.">
                            <field name="ops_navbar_style" widget="radio" class="o_light_label"/>
                        </setting>

                        <!-- Card Shadow + Border Radius — 2-column -->
                        <div class="row">
                            <div class="col-lg-6">
                                <setting string="Card Shadows"
                                         help="Shadow intensity on card panels and form containers.">
                                    <field name="ops_card_shadow" widget="radio" class="o_light_label"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Corner Radius"
                                         help="Border roundness on buttons, cards, and input fields.">
                                    <field name="ops_border_radius" widget="radio" class="o_light_label"/>
                                </setting>
                            </div>
                        </div>

                        <!-- Sub-divider: New User Defaults -->
                        <h4 class="mt-4 mb-2 ops-settings-sub-header">New User Defaults</h4>
                        <div class="text-muted mb-3" style="font-size: 0.85em;">
                            These preferences are applied when new users are created. Existing users can change their own from the user menu.
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <setting string="Default Color Mode"
                                         help="Light or dark interface theme for new user accounts.">
                                    <field name="ops_default_color_mode" widget="radio" class="o_light_label"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Default Chatter Position"
                                         help="Discussion panel placement: bottom of the form or as a side panel.">
                                    <field name="ops_default_chatter_position" widget="radio" class="o_light_label"/>
                                </setting>
                            </div>
                        </div>
                    </block>

                    <!-- ============================================================ -->
                    <!-- SECTION 4: REPORTS & DOCUMENTS                               -->
                    <!-- Appearance + Document details + Signatures + Terms            -->
                    <!-- ============================================================ -->
                    <block title="Reports &amp; Documents" name="ops_report_settings">
                        <div class="text-muted mb-3">
                            Control the appearance of printed PDF reports, invoices, and official documents.
                        </div>

                        <!-- Sub-group: Report Appearance -->
                        <h4 class="ops-settings-sub-header">Report Appearance</h4>

                        <setting string="Logo Position"
                                 help="Company logo placement in the header of printed PDF reports.">
                            <field name="ops_report_logo_position" widget="radio" class="o_light_label"/>
                        </setting>

                        <div class="row">
                            <div class="col-lg-6">
                                <setting string="OPS Framework Badge"
                                         help="Show the Powered by OPS Framework badge in the footer of printed reports.">
                                    <field name="ops_show_external_badge"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Amount in Words Language"
                                         help="Language used when spelling out monetary amounts on invoices.">
                                    <field name="ops_amount_words_lang" widget="radio" class="o_light_label"/>
                                </setting>
                            </div>
                        </div>

                        <!-- Sub-group: Document Details -->
                        <h4 class="mt-4 ops-settings-sub-header">Document Details</h4>

                        <div class="row">
                            <div class="col-lg-6">
                                <setting string="Bank Details on Invoices"
                                         help="Show company bank account information on invoices and payment documents.">
                                    <field name="ops_show_bank_details"/>
                                </setting>
                            </div>
                            <div class="col-lg-6">
                                <setting string="Print Amount in Words"
                                         help="Print the total amount spelled out in words on invoices and quotations.">
                                    <field name="ops_show_amount_words"/>
                                </setting>
                            </div>
                        </div>

                        <!-- Signatures -->
                        <setting string="Signature Block"
                                 help="Show up to three authorized signatory slots at the bottom of official documents.">
                            <field name="ops_show_signature_block"/>
                            <div invisible="not ops_show_signature_block" class="row mt-3">
                                <div class="col-lg-4">
                                    <label for="ops_signature_label_1" string="Signature 1"/>
                                    <field name="ops_signature_label_1" placeholder="e.g. Prepared By"/>
                                </div>
                                <div class="col-lg-4">
                                    <label for="ops_signature_label_2" string="Signature 2"/>
                                    <field name="ops_signature_label_2" placeholder="e.g. Approved By"/>
                                </div>
                                <div class="col-lg-4">
                                    <label for="ops_signature_label_3" string="Signature 3"/>
                                    <field name="ops_signature_label_3" placeholder="e.g. Authorized By"/>
                                </div>
                            </div>
                        </setting>

                        <!-- Terms & Conditions -->
                        <setting string="Default Terms &amp; Conditions"
                                 help="Printed at the bottom of invoices and quotations when no document-specific terms exist.">
                            <field name="ops_report_terms" widget="html"
                                   placeholder="Enter your default terms and conditions..."
                                   options="{'collaborative': false, 'resizable': true}"/>
                        </setting>
                    </block>

                </app>
            </xpath>
        </field>
    </record>

</odoo>
