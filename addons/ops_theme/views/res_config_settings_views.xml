<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="res_config_settings_view_form_ops_theme" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.ops.theme</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">

        <app data-string="OPS Theme" string="OPS Theme" name="ops_theme">

          <!-- ============================================================ -->
          <!-- FAVICON & BRANDING                                           -->
          <!-- ============================================================ -->
          <block title="Favicon &amp; Branding" name="ops_favicon_settings">
            <setting string="Company Favicon"
                     help="Custom favicon for browser tabs (32x32 or 64x64 PNG/ICO)">
              <field name="ops_favicon" widget="image" class="oe_avatar"
                     options="{'size': [64, 64]}"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- THEME PRESET                                                 -->
          <!-- ============================================================ -->
          <block title="Theme Preset" name="ops_theme_preset_settings">
            <setting string="Color Scheme"
                     help="Select a predefined theme or choose Custom">
              <field name="ops_theme_preset" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- BRAND COLORS                                                 -->
          <!-- ============================================================ -->
          <block title="Brand Colors" name="ops_brand_colors_settings">
            <setting string="Primary Color"
                     help="Main color for navbar, headers, primary elements">
              <field name="ops_primary_color" widget="color"/>
            </setting>
            <setting string="Secondary Color"
                     help="Accent color for buttons, links, highlights">
              <field name="ops_secondary_color" widget="color"/>
            </setting>
            <setting string="Success Color"
                     help="Color for success states">
              <field name="ops_success_color" widget="color"/>
            </setting>
            <setting string="Warning Color"
                     help="Color for warnings">
              <field name="ops_warning_color" widget="color"/>
            </setting>
            <setting string="Danger Color"
                     help="Color for errors">
              <field name="ops_danger_color" widget="color"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- LOGIN PAGE                                                   -->
          <!-- ============================================================ -->
          <block title="Login Page" name="ops_login_settings">
            <setting string="Background Image"
                     help="Login page background (1920x1080 recommended)">
              <field name="ops_login_background" widget="image"
                     options="{'size': [200, 120]}"/>
            </setting>
            <setting string="Tagline"
                     help="Welcome message on login page">
              <field name="ops_login_tagline"
                     placeholder="Enterprise Resource Planning"/>
            </setting>
            <setting string="Show Company Logo"
                     help="Display logo on login page">
              <field name="ops_login_show_logo" widget="boolean_toggle"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- LAYOUT OPTIONS                                               -->
          <!-- ============================================================ -->
          <block title="Layout Options" name="ops_layout_settings">
            <setting string="Navbar Style"
                     help="Navigation bar appearance">
              <field name="ops_navbar_style" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
            <setting string="Card Shadow"
                     help="Shadow intensity for cards">
              <field name="ops_card_shadow" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
            <setting string="Border Radius"
                     help="Corner roundness">
              <field name="ops_border_radius" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- REPORT SETTINGS                                              -->
          <!-- ============================================================ -->
          <block title="Report Settings" name="ops_report_settings">
            <setting string="Header Background"
                     help="PDF report header color">
              <field name="ops_report_header_bg" widget="color"/>
            </setting>
            <setting string="Logo Position"
                     help="Company logo placement in reports">
              <field name="ops_report_logo_position" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
            <setting string="Amount in Words"
                     help="Language for amount conversion on documents">
              <field name="ops_amount_words_lang"/>
            </setting>
            <setting string="Framework Badge"
                     help="Show 'Powered by OPS Framework' on reports and documents"
                     groups="base.group_system">
              <field name="ops_show_external_badge" widget="boolean_toggle"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- USER DEFAULTS                                                -->
          <!-- ============================================================ -->
          <block title="User Defaults" name="ops_user_defaults_settings">
            <setting string="Default Color Mode"
                     help="Default appearance for new users">
              <field name="ops_default_color_mode" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
            <setting string="Default Chatter Position"
                     help="Default chatter placement">
              <field name="ops_default_chatter_position" widget="radio"
                     options="{'horizontal': true}"/>
            </setting>
          </block>

          <!-- ============================================================ -->
          <!-- ACTIONS                                                      -->
          <!-- ============================================================ -->
          <block title="Actions" name="ops_theme_actions_settings">
            <div class="mt-3">
              <button name="action_preview_theme" type="object"
                      string="Preview Theme" class="btn-secondary me-2"
                      icon="fa-external-link"/>
              <button name="action_reset_theme_defaults" type="object"
                      string="Reset to Defaults" class="btn-secondary"
                      icon="fa-refresh"
                      confirm="Reset all theme settings to defaults?"/>
            </div>
          </block>

        </app>

      </xpath>
    </field>
  </record>

</odoo>
