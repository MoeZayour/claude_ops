<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================================================================== -->
    <!-- USER PREFERENCES - DISPLAY SETTINGS                                   -->
    <!-- ===================================================================== -->

    <!-- Main User Form View -->
    <record id="res_users_view_form_ops_theme" model="ir.ui.view">
        <field name="name">res.users.form.inherit.ops.theme</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']//group[@name='other_preferences']" position="after">

                <group string="Display Preferences" name="ops_display_preferences">
                    <field name="ops_color_mode" widget="radio" options="{'horizontal': true}"/>
                    <field name="ops_chatter_position" widget="radio" options="{'horizontal': true}"/>
                </group>

            </xpath>
        </field>
    </record>

    <!-- User Preferences Form (simplified view for own preferences) -->
    <record id="res_users_preferences_view_form_ops_theme" model="ir.ui.view">
        <field name="name">res.users.preferences.form.inherit.ops.theme</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_preferences']" position="after">

                <group string="Display" name="ops_display">
                    <field name="ops_color_mode" widget="radio" options="{'horizontal': true}"/>
                    <field name="ops_chatter_position" widget="radio" options="{'horizontal': true}"/>
                </group>

            </xpath>
        </field>
    </record>

</odoo>
