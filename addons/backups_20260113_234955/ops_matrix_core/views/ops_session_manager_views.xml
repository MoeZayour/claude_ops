<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Session Manager Tree View -->
    <record id="view_ops_session_manager_tree" model="ir.ui.view">
        <field name="name">ops.session.manager.tree</field>
        <field name="model">ops.session.manager</field>
        <field name="arch" type="xml">
            <list string="User Sessions" decoration-warning="is_suspicious" decoration-muted="not is_active">
                <field name="session_id"/>
                <field name="user_id"/>
                <field name="ip_address"/>
                <field name="login_time"/>
                <field name="last_activity"/>
                <field name="session_duration"/>
                <field name="is_active"/>
                <field name="is_suspicious"/>
                <field name="logout_reason"/>
                <field name="ip_changes"/>
            </list>
        </field>
    </record>

    <!-- Session Manager Form View -->
    <record id="view_ops_session_manager_form" model="ir.ui.view">
        <field name="name">ops.session.manager.form</field>
        <field name="model">ops.session.manager</field>
        <field name="arch" type="xml">
            <form string="Session Details" create="false">
                <header>
                    <button name="action_force_logout" string="Force Logout" type="object"
                            class="oe_highlight" invisible="not is_active"
                            groups="base.group_system"/>
                    <field name="is_active" widget="badge" decoration-success="is_active"/>
                </header>
                <sheet>
                    <!-- Button box removed - action_view_related_events not implemented -->
                    <group>
                        <group name="session_info">
                            <field name="session_id"/>
                            <field name="user_id"/>
                            <field name="company_id"/>
                        </group>
                        <group name="status">
                            <field name="is_suspicious" widget="boolean_toggle"/>
                            <field name="ip_changes"/>
                            <field name="session_duration"/>
                        </group>
                    </group>
                    <group>
                        <group name="connection">
                            <field name="ip_address"/>
                            <field name="user_agent"/>
                        </group>
                        <group name="timing">
                            <field name="login_time"/>
                            <field name="last_activity"/>
                            <field name="logout_time"/>
                            <field name="logout_reason"/>
                        </group>
                    </group>
                    <group string="Suspicious Activity" invisible="not is_suspicious">
                        <field name="suspicious_reason" nolabel="1"/>
                    </group>
                    <group string="Force Logout Details" invisible="not forced_by_user_id">
                        <field name="forced_by_user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Session Manager Search View -->
    <record id="view_ops_session_manager_search" model="ir.ui.view">
        <field name="name">ops.session.manager.search</field>
        <field name="model">ops.session.manager</field>
        <field name="arch" type="xml">
            <search string="Sessions">
                <field name="session_id"/>
                <field name="user_id"/>
                <field name="ip_address"/>
                <filter name="active" string="Active Sessions" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive Sessions" domain="[('is_active', '=', False)]"/>
                <filter name="suspicious" string="Suspicious" domain="[('is_suspicious', '=', True)]"/>
                <filter name="today" string="Today" domain="[('login_time', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'is_active'}"/>
                    <filter name="group_logout_reason" string="Logout Reason" context="{'group_by': 'logout_reason'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Session Manager Action -->
    <record id="action_ops_session_manager" model="ir.actions.act_window">
        <field name="name">User Sessions</field>
        <field name="res_model">ops.session.manager</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sessions found
            </p>
            <p>
                User sessions are tracked automatically when users log in.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ops_session_manager"
              name="User Sessions"
              parent="ops_settings_menu"
              action="action_ops_session_manager"
              sequence="45"
              groups="base.group_system"/>
</odoo>
